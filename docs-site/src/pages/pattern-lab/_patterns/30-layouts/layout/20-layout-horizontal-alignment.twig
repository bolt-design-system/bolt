{% set notes %}
  This option is only available in a single-column layout (e.g. 50%, 67%, and 75%).
{% endset %}

{% set demo %}
  {% set schema = bolt.data.components['@bolt-layouts-layout'].schema %}
  {% for alignment in schema.properties.align_items.enum %}
    <bolt-layout template="75" align-items="{{ alignment }}">
      <bolt-layout-item>
        <bolt-placeholder>75% and horizontally aligned {{ alignment }}</bolt-placeholder>
      </bolt-layout-item>
    </bolt-layout>
  {% endfor %}
{% endset %}

{% set twig_markup %}
{% verbatim %}
{% include '@bolt-layouts-layout/layout.twig' with {
  template: '75',
  align_items: 'center',
  ...
} only %}
{% endverbatim %}
{% endset %}

{% set html_markup %}
{% verbatim %}
<bolt-layout template="75" align-items="center">
  <bolt-layout-item>
    <!-- Content goes here -->
  </bolt-layout-item>
</bolt-layout>
{% endverbatim %}
{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Horizontal Alignment',
  description: 'Layout items can be horizontally aligned to start, center, or end.',
  notes: notes,
  demo: demo,
  twig_markup: twig_markup,
  html_markup: html_markup,
} only %}
