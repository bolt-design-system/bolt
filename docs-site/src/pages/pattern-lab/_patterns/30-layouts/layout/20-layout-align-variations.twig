{% set schema = bolt.data.components["@bolt-layouts-layout"].schema %}

{% set placeholder %}
  {% include "@bolt-components-placeholder/placeholder.twig" with {
      text: "Column",
      size: "xsmall"
  } only %}
{% endset %}
{% set content %}
  {% include "@bolt-layouts-layout/layout-item.twig" with {
    content: placeholder
  } only %}
{% endset %}

{% for alignment in schema.properties.align_items.enum %}
  <bolt-text font-size="small" font-weight="semibold" class="u-bolt-margin-bottom-none u-bolt-margin-top-medium">This <code>align_items</code> is set to <code>{{ alignment }}</code>.</bolt-text>
  {% include "@bolt-layouts-layout/layout.twig" with {
    template: '67@from-small',
    content: content,
    align_items: alignment,
  } only %}
{% endfor %}
