{% set prefix = "c-bolt-" %}

{% set borderOptions = {
  "top": "top",
  "left": "side"
} %}

{% set alignments = {
  "left": "start",
  "center": "center",
  "right": "end"
} %}

{% set attributes = create_attribute(attributes|default({})) %}


{% set componentName = "blockquote" %}
{% set baseClass = prefix ~ componentName %}
{% set align = align | default("left") %}
{% set border = border %}


{% set classes = [
  baseClass,
  align in alignments|keys ? baseClass ~ "--align-" ~ alignments[align],
  border in borderOptions|keys ? baseClass ~ "--bordered-" ~ borderOptions[border] : ""
] %}

<bolt-{{ componentName }} bolt-component>
  <blockquote {{ attributes.addClass(classes) }}>
    <div class="{{ "#{baseClass}__quote" }}">
      {% block blockquote_quote %}
        {% if content %}
          {% include "@bolt/text.twig" with {
            text: content,
            tag: "div",
            size: "large",
            weight: "semibold"
          } only %}
        {% endif %}
      {% endblock %}
    </div>
    {% if author %}
      {% block blockquote_footer %}
        <footer class="{{ "#{baseClass}__footer" }}">
          <div class="{{ "#{baseClass}__footer-item" }}">
            {% include "@bolt/text.twig" with {
              text: author.name,
              tag: "cite",
              size: "xsmall",
              weight: "semibold"
            } only %}
          </div>
          {% if author.title %}
            <div class="{{ "#{baseClass}__footer-item" }}">
              {% include "@bolt/text.twig" with {
                text: author.title,
                tag: "em",
                size: "xsmall",
                style: "italic"
              } only %}
            </div>
          {% endif %}
        </footer>
      {% endblock %}
    {% endif %}
  </blockquote>
</bolt-{{ componentName }}>
