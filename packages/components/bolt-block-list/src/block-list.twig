{% set prefix = "c-bolt-" %}

{% set attributes = create_attribute(attributes|default({})) %}

{% set componentName = "block-list" %}
{% set baseClass = prefix ~ componentName %}

{% set classes = [
  baseClass
] %}

<bolt-block-list items='{{ contentItems|join(',') }}' bolt-component>
  <ul {{ attributes.addClass(classes) }}>
    {% for listItem in contentItems %}
      <li class="{{ "#{baseClass}__item" }}">
        {% if listItem %}
          {{ listItem }}
        {% endif %}
      </li>
    {% endfor %}
  </ul>
</bolt-block-list>

{% if enable_json_schema_validation %}
  {{ validate_data_schema('@bolt-components-block-list/block-list.schema.yml', _self) | raw }}
{% endif %}