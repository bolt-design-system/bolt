<div class="pl-c-viewport pl-js-viewport">

    <div class="pl-c-viewport__cover pl-js-viewport-cover"></div>

    <div class="pl-c-viewport__iframe-wrapper pl-js-vp-iframe-container">


      <template id="iframe-loader">
        <html dir="ltr" lang="en">
        <head>
          <meta charset="utf-8">
          <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
          <title>Initializing First Bolt Build...</title>
          <style>
            @keyframes animateIn {
              from {
                transform: translate3d(-50%, -100%, 0px);
                opacity: 0;
              }
              to {
                opacity: 1;
                transform: translate3d(-50%, calc(3rem - 50%), 0px)
              }
            }

            .c-bolt-toast {
              z-index: 1000;
              position: absolute;
              top: 0;
              left: 50%;
              margin: auto;
              max-width: 400px;
              width: 100%;
              border-radius: 3px;
              background: rgba(0, 0, 0, .9);
              transform: translate3d(-50%, -100%, 0px);
              transition: all 0.3s ease;
              pointer-events: none;
              opacity: 0;
              animation: animateIn ease 0.3s forwards;
            }

            .c-bolt-toast.is-active {
              opacity: 1;
              transform: translate3d(-50%, calc(3rem - 50%), 0px);
            }

            .c-bolt-toast__content {
              display: flex;
              -webkit-align-items: center;
              -ms-flex-align: center;
              align-items: center;
              pointer-events: auto;
            }

            .c-bolt-toast__message {
              -webkit-flex: 1;
              -ms-flex: 1;
              flex: 1;
              padding: 15px;
              font-size: 14px;
              color: #fff;
            }

            .c-bolt-toast__spinner {
              position: relative;
              display: inline-block;
              width: 56px;
              height: 28px;
            }

            .c-bolt-toast__spinner-svg:not(:root) {
              overflow: hidden;
            }

            .c-bolt-toast__spinner-svg {
              position: absolute;
              top: 0;
              left: 0;
              width: 100%;
              height: 100%;
              -webkit-transform: translateZ(0);
              transform: translateZ(0);
              -webkit-animation: rotate 600ms linear infinite;
              animation: rotate 600ms linear infinite;
            }

            @-webkit-keyframes rotate {
              0% {
                -webkit-transform: rotate(0deg);
                transform: rotate(0deg);
              }
              100% {
                -webkit-transform: rotate(360deg);
                transform: rotate(360deg);
              }
            }

            @keyframes rotate {
              0% {
                -webkit-transform: rotate(0deg);
                transform: rotate(0deg);
              }
              100% {
                -webkit-transform: rotate(360deg);
                transform: rotate(360deg);
              }
            }

            .c-bolt-toast__spinner-svg circle {
              fill: transparent;
              stroke: white;
              stroke-width: 4px;
              stroke-dasharray: 128px;
              stroke-dashoffset: 82px;
            }
          </style>
        </head>
        <body>


          <div class="c-bolt-toast js-bolt-toast">
            <div class="c-bolt-toast__content">
              <div class="c-bolt-toast__message">Initializing First Build</div>
              <div class="c-bolt-toast__spinner">
                <svg viewBox="0 0 64 64" class="c-bolt-toast__spinner-svg">
                  <circle transform="translate(32,32)" r="26"></circle>
                </svg>
              </div>
            </div>
          </div>
          <!-- <script type="text/javascript">
            setTimeout(function () {
              document.querySelector('.js-bolt-toast').classList.add('is-active');
            }, 200);
          </script> -->
        </body>

        </html>
      </template>

        <iframe class="pl-c-viewport__iframe pl-js-iframe" sandbox="allow-same-origin allow-scripts allow-popups allow-forms allow-modals"></iframe>

        <script>
          // Source: https://github.com/jserz/js_piece/blob/master/DOM/NonDocumentTypeChildNode/previousElementSibling/previousElementSibling.md
          if ('previousElementSibling' in document.documentElement && document.currentScript !== undefined){
            var iframe = document.currentScript.previousElementSibling;
            var template = document.querySelector('#iframe-loader');
            iframe.contentWindow.document.documentElement.innerHTML = template.innerHTML;
          }
        </script>

        <div class="pl-c-viewport__resizer pl-js-resize-container">

            <div class="pl-c-viewport__resizer-handle pl-js-resize-handle"></div>

        </div><!--end pl-c-viewport__resizer-->

    </div><!--end pl-c-viewport__iframe-wrapper-->

</div><!--end pl-c-viewport-->