{
  "name": "bolt",
  "description": "Bolt Design System",
  "private": true,
  "author": "Salem Ghoweri",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bolt-design-system/bolt.git"
  },
  "homepage": "https://github.com/bolt-design-system/bolt#readme",
  "bugs": {
    "url": "https://github.com/bolt-design-system/bolt/issues"
  },
  "keywords": [
    "design",
    "system",
    "design system",
    "bolt design system",
    "pattern lab"
  ],
  "scripts": {
    "start": "echo 'To start up a server and watches, head into any of the folders in the apps/ directory, then run npm start there.' && echo 'If you want to start Pattern Lab, run this:' && echo '' && echo 'cd apps/pattern-lab' && echo 'npm start'",
    "setup": "yarn && yarn run bootstrap && yarn run composer",
    "build:pl": "cd apps/pattern-lab && yarn run build:prod",
    "build:bolt-site": "cd apps/bolt-site && yarn run build:prod",
    "Xbuild:drupal-lab": "cd apps/drupal-lab && cd web/themes/flash && yarn run build && cd - && composer run build",
    "build:icons": "lerna exec --scope @bolt/components-icons -- yarn run build",
    "build": "npm-run-all build:* --aggregate-output --print-label --print-name --parallel",
    "composer:pl": "cd apps/pattern-lab && composer install --no-interaction --prefer-dist",
    "composer:core-php": "cd packages/core-php && composer install --no-interaction --prefer-dist",
    "composer:bolt-site": "cd apps/bolt-site && composer install --no-interaction --prefer-dist",
    "composer": "npm-run-all --parallel composer:* --aggregate-output --print-label --print-name",
    "xcomposer:drupal-lab": "cd apps/drupal-lab && composer install --no-interaction --prefer-dist",
    "bootstrap": "lerna bootstrap --reject-cycles",
    "xpostbootstrap": "yarn run build:icons && node scripts/monorepo-tests.js",
    "Xpredeploy": "yarn run build",
    "deploy": "./scripts/deploy.js",
    "clean:git": "git clean -xdf && rm -rf apps/**/vendor apps/**/node_modules && find . -empty -type d -delete",
    "clean:lerna": "lerna clean -Y",
    "clean": "npm-run-all --parallel clean:*",
    "prepublishOnly": "yarn run build && node scripts/monorepo-tests.js",
    "Xlint:editorconfig": "editorconfig-checker --exclude-pattern './www/**/*' --exclude-pattern './**/sandbox/**/*' --exclude-pattern './**/vendor/*' --exclude-pattern './apps/drupal-lab/**' ",
    "lint:js": "eslint --max-warnings 0 'packages/**/*.js' 'apps/**/*.js' '!packages/styleguidekit-assets-bolt/**/*'",
    "lint:js:fix": "yarn run lint:js -- --fix",
    "Xlint:sh": "which shellcheck; if [ $? -eq 0 ]; then shellcheck scripts/*.sh ; else echo 'Shell script linting requires `shellcheck` to be installed, skipping for now; use `brew install shellcheck` to install ~ https://github.com/koalaman/shellcheck '; fi",
    "lint:style": "stylelint 'packages/**/*.scss' 'apps/**/*.scss' '!apps/drupal-lab/**' '!packages/styleguidekit-assets-bolt/**' '!**/vendor/**' --config .stylelintrc",
    "lint:style:fix": "yarn run lint:style -- --fix",
    "lint:twig": "./packages/core-php/vendor/bin/twig-lint lint packages --only-print-errors && ./packages/core-php/vendor/bin/twig-lint lint apps --only-print-errors --exclude=apps/drupal-lab",
    "lint:yaml": "yamllint 'packages/**/*.yml' --ignore='**/vendor/**'",
    "lint": "npm-run-all --continue-on-error --parallel lint:*",
    "prepush": "yarn run test && yarn run lint",
    "test:js": "jest",
    "test:js:watch": "jest --watch",
    "test:php": "cd packages/core-php && composer run test",
    "test": "npm-run-all --parallel test:*",
    "watch:icons": "lerna exec --scope @bolt/components-icons -- yarn run watch"
  },
  "config": {
    "validate-commit-msg": {
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "Subject does not match subject pattern!",
      "types": [
        "chore",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "style",
        "test"
      ],
      "warnOnFail": false
    }
  },
  "devDependencies": {
    "editorconfig-checker": "^1.2.1",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "lerna": "^2.11.0",
    "node-fetch": "^2.1.2",
    "now": "^11.2.4",
    "npm-run-all": "^4.1.3",
    "yaml-lint": "^1.2.3",
    "git-semver-tags": "^2.0.0"
  },
  "workspaces": [
    "packages/components/bolt-action-blocks",
    "packages/components/bolt-background-shapes",
    "packages/components/bolt-background",
    "packages/components/bolt-band",
    "packages/components/bolt-block-list",
    "packages/components/bolt-blockquote",
    "packages/components/bolt-breadcrumb",
    "packages/components/bolt-button-group",
    "packages/components/bolt-button",
    "packages/components/bolt-card",
    "packages/components/bolt-chip-list",
    "packages/components/bolt-chip",
    "packages/components/bolt-code-snippet",
    "packages/components/bolt-copy-to-clipboard",
    "packages/components/bolt-critical-fonts",
    "packages/components/bolt-device-viewer",
    "packages/components/bolt-dropdown",
    "packages/components/bolt-figure",
    "packages/components/bolt-form",
    "packages/components/bolt-headline",
    "packages/components/bolt-icon",
    "packages/components/bolt-icons",
    "packages/components/bolt-image",
    "packages/components/bolt-link",
    "packages/components/bolt-logo",
    "packages/components/bolt-nav-indicator",
    "packages/components/bolt-nav-priority",
    "packages/components/bolt-navlink",
    "packages/components/bolt-navbar",
    "packages/components/bolt-ordered-list",
    "packages/components/bolt-page-footer",
    "packages/components/bolt-page-header",
    "packages/components/bolt-placeholder",
    "packages/components/bolt-share",
    "packages/components/bolt-site",
    "packages/components/bolt-smooth-scroll",
    "packages/components/bolt-sticky",
    "packages/components/bolt-teaser",
    "packages/components/bolt-text",
    "packages/components/bolt-tooltip",
    "packages/components/bolt-unordered-list",
    "packages/components/bolt-video",
    "packages/core",
    "packages/global",
    "packages/styleguidekit-assets-bolt",
    "packages/styleguidekit-assets-bolt/src/components/*",
    "packages/styleguidekit-assets-bolt/src/utils",
    "packages/build-tools",
    "packages/config-presets/babel-preset-bolt",
    "packages/config-presets/config-browserlist",
    "packages/config-presets/config-eslint",
    "packages/config-presets/config-stylelint",
    "apps/drupal-lab/web/themes/flash",
    "apps/*",
    "!apps/drupal-lab"
  ]
}
