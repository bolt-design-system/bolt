{% set form_children %}
  {% set for_value = "percent" %}
  {% set label %}
    {% include "@bolt-components-form/form-label.twig" with {
      title: "Example of percent auto formatting (add attribute 'data-format-input=\"percent\"')",
      attributes: {
        for: for_value
      },
      displayType: "block"
    } only %}
  {% endset %}
  {% set input %}
    {% include "@bolt-components-form/form-input.twig" with {
      attributes: {
        placeholder: "E.g. 10%",
        required: true,
        type: "text",
        id: for_value,
        "data-format-input": "percent",
        pattern: "[0-9%$.,¥]+",
        inputmode: "decimal"
      },
    } only %}
  {% endset %}
  {% include "@bolt-components-form/form-element.twig" with {
    labelDisplay: "before",
    label: label,
    children: input
  } only %}

