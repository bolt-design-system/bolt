<div class="c-band" data-background="{{background}}">
  {% for item in body %}
    {% include item.name ~ '.twig' with item only %}
  {% else %}
    {% block body %}{% endblock %}
  {% endfor %}
</div>






<div class="c-band t-navy">

  <div class="o-wrapper">

    {% grid 'o-grid--flex o-grid--middle o-grid--matrix' %}

      {% cell 'u-1/1 u-3/4@small u-flex-grow' %}
        {% include "@bolt/h2.twig" with {
          heading: {
            text: 'Who is Pega?',
            size: 'small',
            weight: 'semibold'
          }
        } %}

        {% include "@bolt/heading.twig" with {
          heading: {
            element: 'p',
            text: band.text | default('Pega is #1 in software for customer engagement and operational excellence. mwmwmwmwmw'),
            size: 'medium',
            weight: 'bold',
            attributes: {
              class: [
                "u-margin-bottom-none"
              ]
            }
          }
        } %}
      {% endcell %}


      {% cell 'u-1/1@only-small' %}
        {% include "@bolt/button.twig" with {
          button: {
            text: 'About Us',
            style: 'flat',
            width: 'full'
          }
        } %}
      {% endcell %}
    {% endgrid %}




  </div>
</div>
