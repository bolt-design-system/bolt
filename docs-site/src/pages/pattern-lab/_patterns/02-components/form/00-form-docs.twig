{% set usage %}{% verbatim %}
{% extends "@bolt-components-form/form.twig" %}
{% set children %}
  {% set form_field %}
    {% include "@pl/10-form-element-demo-input-element.twig" with {
      title: "Email Address",
      inputAttributes: {
        placeholder: "Enter Email Address",
        required: true,
        type: "email"
      },
      labelDisplayType: "floating"
    } only %}
  {% endset %}
  {% set submit_button %}
    {% include "@bolt-components-form/form-button.twig" with {
      text: "Sign up now",
      tag: "submit"
    } only %}
  {% endset %}
{% endset %}
{% endverbatim %}{% endset %}

{% include "@utils/docs.twig" with {
  componentName: "form",
  usage: usage
} only %}
