{% set video_uuid1 = "js-bolt-video-uuid-card-replacement" %}
{% set video_uuid2 = "js-bolt-video-uuid-card-replacement-with-link" %}

{% set video_ratio1 %}
  {% set video %}
    <video-js
      data-account="1900410236"
      data-player="4fVA8Ojzs"
      data-embed="default"
      data-video-id="3974147489001"
      id="{{ video_uuid1 }}"
      controls
      class="video-js"></video-js>
  {% endset %}

  {% include "@bolt-components-ratio/ratio.twig" with {
    children: video,
    ratio: "16/9"
  } only %}
{% endset %}

