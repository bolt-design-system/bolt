{% set parent_schema = bolt.data.components['@bolt-components-card-replacement'].schema %}

{% set schema = bolt.data.components['@bolt-components-card-replacement'].schema.properties.body %}
{% set this = init(schema) %}

{# Variables #}
{% set inner_attributes = create_attribute({}) %}
{% set _spacing_options = parent_schema.properties.spacing.enum %}
{% set spacing = spacing in _spacing_options ? spacing : parent_schema.properties.spacing.default %}

{% set _classes = [
  'c-bolt-card_replacement__body',
  'c-bolt-card_replacement__body--spacing-' ~ spacing,
] %}

<bolt-card-replacement-body
  {{ this.props|without('eyebrow')|without('headline')|without('paragraph') }}
  >
  <ssr-keep for="bolt-card-replacement-body" {{ inner_attributes.addClass(_classes) }}>
    {% block body %}
      {% if body.content %}
        {{ body.content }}
      {% else %}

        {% if this.data.eyebrow.value %}
          {% include '@bolt-components-headline/eyebrow.twig' with {
            text: this.data.eyebrow.value,
          } only %}
        {% endif %}
        {% if this.data.headline.value %}
          {% include '@bolt-components-headline/headline.twig' with {
            text: this.data.headline.value,
            size: 'large',
          } only %}
        {% endif %}
        {% if this.data.paragraph.value %}
          {% include '@bolt-components-headline/text.twig' with {
            text: this.data.paragraph.value,
          } only %}
        {% endif %}
      {% endif %}
    {% endblock %}
  </ssr-keep>
</bolt-card-replacement-body>
