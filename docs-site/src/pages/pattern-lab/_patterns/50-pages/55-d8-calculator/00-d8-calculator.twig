{#
/**
 * Content band and custom background block
 */
#}
{% set content %}
  {#
  /**
   * Logo
   */
  #}
  <div class="c-www-calculator-logo" aria-hidden="true">
    <span>&#43;</span>
    <span>&#8722;</span>
    <span>&#215;</span>
    <span>&#247;</span>
  </div>

  <div class="o-bolt-grid o-bolt-grid--matrix o-bolt-grid--flex c-www-calculator-fade-in-content">
    {#
    /**
     * Headings
     */
    #}
    <div class="o-bolt-grid__cell u-bolt-width-12/12 u-bolt-width-9/12@small">
      {% include "@bolt-components-headline/headline.twig" with {
        text: "Real-time Decisioning Revenue Calculator",
        size: "xxxlarge",
        tag: "h1"
      } only %}

      {% include "@bolt-components-headline/subheadline.twig" with {
        text: "Find out the total revenue benefit of taking a real-time, next-best-action approach to customer engagement, focused on retention and cross-sell.",
        size: "xlarge",
        tag: "h2",
      } only %}
    </div>

    {#
    /**
     * Content
     */
    #}
    <div class="o-bolt-grid__cell u-bolt-width-12/12">

      {#
      /**
       * Multi-column form
       */
      #}
      {% set form_children %}
        <div role="list" class="o-bolt-grid o-bolt-grid--flex o-bolt-grid--matrix o-bolt-grid--top">
          <div role="listitem" class="o-bolt-grid__cell u-bolt-width-12/12 u-bolt-width-6/12@medium">
            <div class="c-bolt-input-list__item">
              {% include "@pl/10-form-element-demo-input-element.twig" with {
                title: "What is your company&rsquo;s total revenue?",
                labelDisplayType: "block",
                labelDisplay: "before",
                inputAttributes: {
                  placeholder: "E.g. $25,000,000,000",
                  required: true,
                  type: "number",
                  "data-bolt-format-input": "currency-us"
                },
                element_id: "www-calculator-total-revenue",
              } %}
            </div>
          </div>
          <div role="listitem" class="o-bolt-grid__cell u-bolt-width-12/12 u-bolt-width-6/12@medium">
            <div class="c-bolt-input-list__item">
              {% include "@pl/10-form-element-demo-input-element.twig" with {
                title: "What is your company&rsquo;s churn rate?",
                labelDisplayType: "block",
                labelDisplay: "before",
                inputAttributes: {
                  placeholder: "E.g. 10%",
                  required: true,
                  type: "number",
                  id: for_value,
                  "data-bolt-format-input": "percent",
                  min: 0,
                  max: 100
                },
                element_id: "www-calculator-churn-rate",
              } %}
            </div>
          </div>
          <div role="listitem" class="o-bolt-grid__cell u-bolt-width-12/12 u-bolt-width-6/12@medium">
            <div class="c-bolt-input-list__item">
              {% include "@pl/10-form-element-demo-input-element.twig" with {
                title: "How many customers does your company have?",
                labelDisplayType: "block",
                labelDisplay: "before",
                inputAttributes: {
                  placeholder: "E.g. 10,000,000",
                  required: true,
                  type: "number",
                  id: for_value,
                  "data-bolt-format-input": "number"
                },
                element_id: "www-calculator-customers",
              } %}
            </div>
          </div>
          <div role="listitem" class="o-bolt-grid__cell u-bolt-width-12/12 u-bolt-width-6/12@medium">
            <div class="c-bolt-input-list__item">
              {% include "@pl/10-form-element-demo-input-element.twig" with {
                title: "What is your company&rsquo;s average cost of customer acquisition?",
                labelDisplayType: "block",
                labelDisplay: "before",
                inputAttributes: {
                  placeholder: "E.g. 2000",
                  required: true,
                  type: "number",
                  id: for_value,
                  "data-bolt-format-input": "currency-us"
                },
                element_id: "www-calculator-average-cost",
              } %}
            </div>
          </div>
          <div role="listitem" class="o-bolt-grid__cell u-bolt-width-12/12 u-bolt-width-6/12@medium">
            <div class="c-bolt-input-list__item">
              {% include "@pl/10-form-element-demo-input-element.twig" with {
                title: "How much is each customer worth (per year)?",
                labelDisplayType: "block",
                labelDisplay: "before",
                inputAttributes: {
                  placeholder: "E.g. 2000",
                  required: true,
                  type: "number",
                  id: for_value,
                  "data-bolt-format-input": "currency-us"
                },
                element_id: "www-calculator-customer-worth",
              } %}
            </div>
          </div>
          <div role="listitem" class="o-bolt-grid__cell u-bolt-width-12/12 u-bolt-width-6/12@medium u-bolt-margin-top-auto">
            {% include "@bolt-components-form/form-button.twig" with {
              text: "Calculate my result",
              width: "full",
              attributes: {
                type: "submit",
              }
            } only %}
          </div>
        </div>
      {% endset %}

      {% include "@bolt-components-form/form.twig" with {
        children: form_children
      } only %}
      {#
      /**
       * End multi-column form
       */
      #}
    </div>
  </div>
{% endset %}
{% embed "@bolt-components-band/band.twig" with {
  size: "large",
  theme: "dark",
  content: content,
} only %}
  {% block band_background %}
    <div class="c-www-calculator-background" aria-hidden="true">
      {% include "@bolt-components-image/image.twig" with {
        src: "/images/backgrounds/calculator-landing-shapes-transparent.png",
        alt: "Decorative shapes.",
      } only %}
    </div>
  {% endblock %}
{% endembed %}
