{% set schema = bolt.data.components['@bolt-components-text'].schema %}

{% for fontSize in schema.properties.fontSize.enum %}
  {% for weight in schema.properties.weight.enum %}
    {% for style in schema.properties.style.enum %}

      {% include "@bolt-components-text/text.twig" with {
        text: "This is " ~ weight ~ " weight and " ~ style ~ " headline",
        headline: true,
        weight: weight,
        style: style,
        fontSize: fontSize,
      } only %}

      {% include "@bolt-components-text/text.twig" with {
        text: "This is " ~ weight ~ " weight and " ~ style ~ " subheadline",
        subheadline: true,
        weight: weight,
        style: style,
        fontSize: fontSize
      } only %}

      {% include "@bolt-components-text/text.twig" with {
        text: "This is " ~ weight ~ " weight and " ~ style ~ " text",
        weight: weight,
        style: style,
        fontSize: fontSize,
      } only %}

    {% endfor %}
  {% endfor %}
{% endfor %}