{% set video_demo %}
  <video-js
    data-account='1900410236'
    data-player='4fVA8Ojzs'
    data-embed='default'
    data-video-id='3974147489001'
    data-media-duration
    controls
    class='c-base-video'></video-js>
{% endset %}

{% set image_demo %}
  {% include '@bolt-components-image/image.twig' with {
    src: "/images/placeholders/landscape-16x9-mountains.jpg",
    alt: "Mountains",
  } only %}
{% endset %}

<div class="o-bolt-grid o-bolt-grid--flex o-bolt-grid--matrix">
  <div class="o-bolt-grid__cell u-bolt-width-12/12 u-bolt-width-6/12@small u-bolt-width-4/12@medium">
    {% include '@bolt-components-teaser/teaser.twig' with {
      media: video_demo,
      headline: {
        text: 'A Longer Test Video Headline in the First Card Position.',
        url: 'https://pega.com',
        tag: 'h2',
        size: 'large',
      },
      chip_list: {
        size: 'xsmall',
        items: [
          {
            text: 'Video',
          },
          {
            text: 'Research',
          },
        ],
      }
    } only %}
  </div>
  <div class="o-bolt-grid__cell u-bolt-width-12/12 u-bolt-width-6/12@small u-bolt-width-4/12@medium">
    {% include '@bolt-components-teaser/teaser.twig' with {
      media: video_demo,
      headline: {
        text: 'Second Video Headline',
        url: 'https://pega.com',
        tag: 'h2',
        size: 'large',
      },
    } only %}
  </div>
  <div class="o-bolt-grid__cell u-bolt-width-12/12 u-bolt-width-6/12@small u-bolt-width-4/12@medium">
    {% include '@bolt-components-teaser/teaser.twig' with {
      media: image_demo,
      headline: {
        text: 'Image Headline',
        tag: 'h2',
        size: 'large',
      },
    } only %}
  </div>
</div>
