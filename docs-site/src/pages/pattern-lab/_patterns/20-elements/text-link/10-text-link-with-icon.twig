{% set icon_custom %}
  <img src="/images/placeholders/500x500.jpg" alt="Bill">
{% endset %}

{% set reversed_underline_link %}
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: 'This is a text link with reversed underline',
    icon_after: {
      name: 'chevron-right'
    },
    reversed_underline: true,
    attributes: {
      href: 'javascript:',
    }
  } only %}
{% endset %}

<bolt-text headline>Icon Before and After</bolt-text>
<p>
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: 'This is a text link with icons before and after',
    icon_before: {
      name: 'global',
    },
    icon_after: {
      name: 'chevron-down',
    },
    attributes: {
      href: 'https//pega.com',
    }
  } only %}
</p>
<p>
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: 'This is a text link with an icon before',
