{# Setting variables for demo purposes #}
{% set icon_facebook %}
  {% include "@bolt-components-icon/icon.twig" with {
    name: "facebook-solid",
    size: "small",
  } only %}
{% endset %}

{% set icon_twitter %}
  {% include "@bolt-components-icon/icon.twig" with {
    name: "twitter-solid",
    size: "small",
  } only %}
{% endset %}

{% set icon_linkedin %}
  {% include "@bolt-components-icon/icon.twig" with {
    name: "linkedin-solid",
    size: "small",
  } only %}
{% endset %}

{% set trigger %}
  {% include "@bolt-components-button/button.twig" with {
    text: "Menu",
    size: "xsmall",
  } only %}
{% endset %}

{% set content %}
  {# Start component specific code #}
  {% include "@bolt-components-menu/menu.twig" with {
    title: "Choose one of these",
    items: [
      {
        content: "Menu item 1",
        icon_before: icon_facebook,
      },
      {
        content: "Menu item 2",
        icon_before: icon_twitter,
      },
      {
        content: "Menu item 3",
        icon_before: icon_linkedin,
      },
    ]
  } only %}
  {# End component specific code #}
{% endset %}

<bolt-text headline>Popover menu</bolt-text>
<bolt-text>Create a popover menu by combining the Popover and Menu components.</bolt-text>
{% include "@bolt-components-popover/popover.twig" with {
  trigger: trigger,
  content: content,
  spacing: "none",
} only %}
