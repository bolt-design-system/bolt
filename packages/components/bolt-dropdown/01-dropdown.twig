
{% set uuid = random() %}

{% set primaryUUID = "c-bolt-dropdown-#{uuid}" %}
{% set secondaryUUID = "c-bolt-dropdown-inner-#{uuid}" %}

<bolt-dropdown align="">
  <input class="c-bolt-dropdown__state" type="checkbox" id="{{ primaryUUID }}">

  <div class="c-bolt-dropdown" id="{{ secondaryUUID }}">
    <h3 class="c-bolt-dropdown__header u-bolt-hidden@small">
      <button class="c-bolt-dropdown__header-button">
        Toggle Dropdown

        <bolt-icon name="chevron-right"></bolt-icon>
      </button>

      <label class="c-bolt-dropdown__label" for="{{ primaryUUID }}">
        <h3 class="c-bolt-dropdown__header-title">Toggle Dropdown</h3>
        <bolt-icon name="chevron-right"></bolt-icon>
      </label>

      <a href="#{{ secondaryUUID }}" class="c-bolt-dropdown__toggle c-bolt-dropdown__toggle--open">
        <span class="c-bolt-dropdown__toggle-text">Open Menu</span>
      </a>

      <a href="#{{ primaryUUID }}" class="c-bolt-dropdown__toggle c-bolt-dropdown__toggle--close">
        <span class="c-bolt-dropdown__toggle-text">Close Menu</span>
      </a>
    </h3>

    <div class="c-bolt-dropdown__content u-bolt-block@small u-bolt-height-auto@small">
      <div class="c-bolt-dropdown__content-inner u-bolt-opacity-100@small">
        <span class="default">
          {% block children %}
            {{ children }}
          {% endblock %}
        </span>
      </div>
    </div>
  </div>
</bolt-dropdown>






