{% set videoUuid1 = "js-bolt-video-uuid-card-replacement" %}
{% set videoUuid2 = "js-bolt-video-uuid-card-replacement-with-link" %}

{% set videoRatio1 %}
  {% set video %}
    <video-js
      data-account="1900410236"
      data-player="4fVA8Ojzs"
      data-embed="default"
      data-video-id="3974147489001"
      id="{{ videoUuid1 }}"
      controls
      class="video-js"></video-js>
  {% endset %}

  {% include "@bolt-components-ratio/ratio.twig" with {
    children: video,
    ratio: "16/9",
    attributes: {
      style: [
        "z-index: 2"
      ]
    }
  } only %}
{% endset %}

{% set videoRatio2 %}
  {% set video %}
    <video-js
      data-account="1900410236"
      data-player="4fVA8Ojzs"
      data-embed="default"
      data-video-id="3974147489001"
      id="{{ videoUuid2 }}"
      controls
      class="video-js"></video-js>
  {% endset %}

  {% include "@bolt-components-ratio/ratio.twig" with {
    children: video,
    ratio: "16/9",
    attributes: {
      style: [
        "z-index: 2"
      ]
    }
  } only %}
{% endset %}

{% grid "o-bolt-grid--flex o-bolt-grid--matrix o-bolt-grid--center" %}
  {% cell "u-bolt-width-6/12 u-bolt-width-4/12@small" %}
    {% include "@bolt-components-card-replacement/card-replacement.twig" with {
      tag: "article",
      media: {
        content: videoRatio1
      },
      body: {
        eyebrow: "Video",
        headline: "Video Meta Title Goes Here.",
        paragraph: "Anthem debuts its next-generation service desktop, driving frictionless customer experiences.",
      },
      actions: [
        {
          text: "Play or Pause",
          attributes: {
            "data-video-target": videoUuid1,
            "class": "brightcove-toggle"
          }
        },
      ],
    } only %}
  {% endcell %}
  {% cell "u-bolt-width-6/12 u-bolt-width-4/12@small" %}
    {% include "@bolt-components-card-replacement/card-replacement.twig" with {
      link: {
        url: "https://pega.com",
        text: "Go to pega.com"
      },
      media: {
        content: videoRatio2
      },
      body: {
        headline: "With link and video",
        paragraph: "This card has a link, which makes the whole card-replacement clickable, and you can make it play/pause the video. Action button is optional in this case.",
      },
      actions: [
        {
          text: "This button is video control",
          attributes: {
            "data-video-target": videoUuid2,
            "class": "brightcove-toggle"
          },
        }
      ],
    } only %}
  {% endcell %}
{% endgrid %}
