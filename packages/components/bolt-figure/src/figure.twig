{% if enable_json_schema_validation %}
  {{ validate_data_schema(bolt.data.components['@bolt-components-figure'].schema, _self) | raw }}
{% endif %}

{% set prefix = "c-bolt-" %}
{% set attributes = create_attribute(attributes|default({})) %}
{% set componentName = "figure" %}
{% set baseClass = prefix ~ componentName %}

{% set classes = [
  baseClass
] %}

<bolt-{{ componentName }} bolt-component>
  <figure {{ attributes.addClass(classes) }}>
    {% if image %}
      {% include "@bolt/image.twig" with image only %}
    {% elseif icon %}
      {% include "@bolt/icon.twig" with icon only %}
    {% endif %}

    {% if content %}
      {{ content }}
    {% endif %}

    {% if caption %}
      <figcation class="{{ "#{baseClass}__figcation" }}">{{ caption }}</figcation>
    {% endif %}
  </figure>
</bolt-{{ componentName }}>
