{% set _chevron %}
  {% include '@bolt-components-icon/icon.twig' with {
    name: 'chevron-right',
  } only %}
{% endset %}

{% for theme in ["xlight", "light", "medium", "dark", "xdark"] %}
  <p>Theme: {{ theme }}</p>
  {% embed "@utils/theme-demo.twig" %}
    {% block demo_content %}
      {% include "@bolt-components-block-list/block-list.twig" with {
        items: [
          include("@bolt-elements-text-link/text-link.twig", {
            content: "Link 1",
            icon_before: _chevron,
            attributes: {
              href: '#!'
            }
          }),
          include("@bolt-elements-text-link/text-link.twig", {
            content: "Link 2",
            icon_before: _chevron,
            attributes: {
              href: '#!'
            }
          }),
          include("@bolt-elements-text-link/text-link.twig", {
            content: "Link 3",
            icon_before: _chevron,
            attributes: {
              href: '#!'
            }
          }),
          "Simple text example"
        ]
      } only %}
    {% endblock %}
  {% endembed %}
  <br>
{% endfor %}

