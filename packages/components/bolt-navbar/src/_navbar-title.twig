{% set attributes = create_attribute(attributes|default({})) %}

{% set title_attributes = create_attribute({}) %}
{% set hide_title = hide_title is sameas(true) or hide_title is sameas(false) ? hide_title : scheuma.properties.hide_title.default %}

{% set title_classes = ['c-bolt-navbar__title-text'] %}
{% if hide_title %}
  {% set title_classes = title_classes|merge(['c-bolt-navbar__title-text--hideTitle']) %}
{% endif %}
{% set title_attributes = title_attributes.addClass(title_classes) %}

{% if url %}
  {% set attributes = attributes.setAttribute("href", url) %}
{% endif %}

{% set navbar_title %}
  {% if icon %}
    <div class="c-bolt-navbar__title-icon">
      {% include "@bolt/icon.twig" with {
        "name": icon.name,
        "size": "large"
      } only %}
    </div>
  {% endif %}
  <{{ tag }} {{ title_attributes }}>
    {{ text|default("Go to"|t) }}
  </{{ tag }}>
{% endset %}

{% if url %}
  <a class="c-bolt-navbar__title--link" {{ attributes }}>
    {{ navbar_title }}
  </a>
{% else %}
  <div class="c-bolt-navbar__title--static">
    {{ navbar_title }}
  </div>
{% endif %}
