{% set navbar_data = [
  {
    text: "Features",
    url: "#!"
  },
  {
    text: "Resources",
    url: "#!"
  },
  {
    text: "Industry Apps",
    url: "#!"
  },
  {
    text: "Customer Success",
    url: "#!"
  }
] %}

{% set navbar_content %}
  {% for item in navbar_data %}
    {% include "@bolt-components-navbar/navbar-item.twig" with item only %}  
  {% endfor %}
{% endset %}

{% set usage %}{% verbatim %}
{% include "@bolt-components-navbar/navbar.twig" with {
  title: {
    tag: "h2",
    text: "Title Text",
    icon: {
      name: "icon-name"
    }
  },
  content: navbar_content
} only %}
{% endverbatim %}{% endset %}

{% include "@utils/docs.twig" with {
  componentName: "navbar",
  usage: usage,
  schemaForm: {
    template: '@bolt-components-navbar/navbar.twig',
    layout: "horizontal",
    initialData: {
      width: "auto",
      title: {
        tag: "h2",
        text: "Title Text",
        icon: {
          name: "marketing-gray"
        }
      },
      content: navbar_content
    },
  },
} only %}
