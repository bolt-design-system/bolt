<div class="bolt-docs">

  {% if schema %}
    <div class="bolt-docs__schema">
      {% include '@utils/schema-docs.twig' with schema only %}
    </div>
  {% endif %}

  {% if code %}
    <h4>How to use</h4>
    <pre><code>{{ code }}</code></pre>
  {% endif %}

  {% if readme %}
    <h4>ReadMe</h4>
    {{ readme|markdown }}
    {% if readmePath %}
      {# @todo Improve robustness of getting ReadMe Path #}
      {% set branchName = 'epic/refactor' %}
      <a href="https://github.com/bolt-design-system/bolt/blob/{{ branchName }}/{{ readmePath }}" target="_blank">Edit this ReadMe on GitHub</a>
    {% endif %}
  {% endif %}

  {% if links %}
    <h4>Helpful Links</h4>
    {% for link in links %}
      <a href="{{ link.url }}" target="_blank">{{ link.text }}</a>
    {% endfor %}
  {% endif %}
</div>
