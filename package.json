{
  "name": "bolt",
  "description": "Bolt Design System",
  "private": true,
  "author": "Salem Ghoweri",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bolt-design-system/bolt.git"
  },
  "homepage": "https://github.com/bolt-design-system/bolt#readme",
  "bugs": {
    "url": "https://github.com/bolt-design-system/bolt/issues"
  },
  "keywords": [
    "design",
    "system",
    "design system",
    "bolt design system",
    "pattern lab"
  ],
  "scripts": {
    "start": "cd docs-site && yarn run start",
    "build": "cd docs-site && yarn run build:prod",
    "setup": "yarn",
    "setup:php": "npx lerna exec --scope @bolt/twig-renderer --scope @bolt/drupal-twig-extensions --scope @bolt/core-php -- yarn run setup",
    "setup:quick": "yarn install --production",
    "setup:full": "yarn --force",
    "deploy": "./scripts/deploy.js",
    "deploy:docker": "sh ./scripts/docker.sh",
    "clean": "npx npm-run-all --parallel clean:*",
    "clean:empty": "find . -empty -type d -delete",
    "clean:composer": "find . -name 'vendor' -type d -exec rm -rf {} +",
    "clean:cache": "find . -name 'cache' -type d -exec rm -rf {} +",
    "clean:npm": "find . -name 'node_modules' -type d -exec rm -rf {} +",
    "clean:www": "find . -name 'www' -type d -exec rm -rf {} +",
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "eslint --max-warnings 0 'packages/**/*.js' 'docs-site/**/*.js'",
    "lint:scss": "stylelint 'packages/**/*.scss' 'docs-site/**/*.scss' --config .stylelintrc",
    "test": "npm-run-all --parallel test:js test:php test:monorepo",
    "test:js": "NODE_ENV='test' jest",
    "test:monorepo": "node scripts/monorepo-tests.js",
    "test:php": "npx lerna exec --scope @bolt/core-php -- composer run test",
    "test:e2e:quick-live": " NOW_URL=https://boltdesignsystem.com ./node_modules/.bin/nightwatch --config nightwatch.js --env local",
    "test:e2e:full-live": " NOW_URL=https://boltdesignsystem.com ./node_modules/.bin/nightwatch --config nightwatch.js --env chrome,firefox,ie11",
    "test:e2e:quick-local": "NOW_URL=http://localhost:3000 ./node_modules/.bin/nightwatch --config nightwatch.js --env local",
    "test:e2e:full-local": "NOW_URL=http://localhost:3000 ./node_modules/.bin/nightwatch --config nightwatch.js --env chrome,firefox,ie11",
    "test:e2e:full": "./node_modules/.bin/nightwatch --config nightwatch.js --env chrome,firefox,ie11 $NOW_URL",
    "serve": "node server.js",
    "postinstall": "yarn run setup:php",
    "postbootstrap": "node scripts/monorepo-tests.js",
    "commit": "git-cz",
    "release:rc": "./scripts/release/rc-release.sh",
    "release": "./scripts/release/release.sh",
    "_verdaccio": "rm -rf scripts/release/verdaccio && npm run config:verdaccio & npm run start:verdaccio",
    "_start:verdaccio": "verdaccio --listen 4000 -c scripts/release/verdaccio.yml",
    "_config:verdaccio": "wait-on http://localhost:4000/ && npx npm-auth-to-token@1.0.0 -u 'bolt' -p 'bolt' -e 'bolt@boltdesignsystem.com' -r http://localhost:4000 && rm -rf scripts/release/verdaccio/storage/@bolt"
  },
  "dependencies": {
    "ci-utils": "^0.5.0",
    "jest": "^23.6.0",
    "jest-serializer-html": "^5.0.0",
    "jsonwebtoken": "^8.4.0",
    "npm-run-all": "^4.1.5",
    "sassdoc": "^2.5.0",
    "sleep-promise": "^8.0.1",
    "verdaccio": "^3.10.1",
    "wait-on": "^3.2.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-lerna-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@commitlint/config-lerna-scopes": "^7.2.1",
    "commitizen": "^3.0.4",
    "cz-lerna-changelog": "^2.0.1",
    "editorconfig-checker": "^1.3.3",
    "express": "^4.16.3",
    "git-semver-tags": "^2.0.0",
    "husky": "^1.3.1",
    "lerna": "^3.8.4",
    "nightwatch": "^1.0.8",
    "node-fetch": "^2.2.0",
    "now": "latest",
    "os": "^0.1.1",
    "os-name": "^2.0.1",
    "url-exists": "^1.0.3",
    "yaml-lint": "^1.2.4"
  },
  "workspaces": {
    "packages": [
      "docs-site",
      "docs-site/src/components/*",
      "packages/uikit-workshop",
      "packages/build-tools",
      "packages/build-tools/plugins/*",
      "packages/components/*",
      "packages/drupal-twig-extensions",
      "packages/components/lists/*",
      "packages/config-presets/*",
      "packages/core",
      "packages/core-php",
      "packages/twig-renderer",
      "packages/global"
    ]
  },
  "version": "0.0.0-development"
}
