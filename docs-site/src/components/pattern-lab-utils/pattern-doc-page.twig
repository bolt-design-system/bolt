{% macro code_example(code) %}
  <bolt-code-snippet syntax="dark" lang="twig">{% spaceless %}
    {{ code|replace({
      '<': '&lt;',
      '>': '&gt;',
      '{': '&lbrace;',
      '}': '&rbrace;',
      '%': '&percnt;',
    })|trim|spaceless|raw }}
  {% endspaceless %}</bolt-code-snippet>
{% endmacro %}
{% import _self as snippet %}

{% set content %}
<bolt-text headline tag="h2" font-size="xlarge">
  {{ title }}
</bolt-text>
<bolt-stack>
  {{ description }}
</bolt-stack>

{% if notes %}
<bolt-banner align="start">
  <bolt-text headline tag="p" font-size="medium">Note:</bolt-text>
  <bolt-stack>
    {{ notes }}
  </bolt-stack>
</bolt-banner>
{% endif %}

<bolt-text headline tag="h3" font-size="large">
  Demo
</bolt-text>
<bolt-stack>
  {{ demo }}
</bolt-stack>

{% set twig %}
{{ twig_markup }}
{% endset %}

{% set html %}
{{ html_markup }}
{% endset %}

<bolt-tabs inset="off">
  <bolt-tab-panel>
    <div slot="label">Twig</div>
    {% include snippet.code_example(twig) %}
  </bolt-tab-panel>
  <bolt-tab-panel>
    <div slot="label">HTML</div>
    {% include snippet.code_example(html) %}
  </bolt-tab-panel>
</bolt-tabs>
{% endset %}

{% include '@bolt-components-band/band.twig' with {
  theme: 'none',
  content: content,
} only %}
