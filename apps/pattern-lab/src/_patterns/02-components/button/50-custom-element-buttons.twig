
{% grid with {
  attributes: {
    class: [
      "o-bolt-grid--matrix"
    ]
  }
} %}
  {% cell %}
    <bolt-button>Simple primary button</bolt-button>
  {% endcell %}

  {% cell %}
    <bolt-button color="secondary">Simple secondary button</bolt-button>
  {% endcell %}

  {% cell %}
    <bolt-button color="text">Simple text button</bolt-button>
  {% endcell %}

  {% cell %}
    <bolt-button color="primary" url="https://google.com">Simple primary button-link</bolt-button>
  {% endcell %}

  {% cell %}
    <bolt-button color="secondary" disabled>
    Secondary disabled
    </bolt-button>
  {% endcell %}

  {% cell %}
    <bolt-button color="primary" url="https://google.com">
      <bolt-icon slot="before" name="arrow-left"></bolt-icon>
      Button with 1 slotted icon
    </bolt-button>
  {% endcell %}

  {% cell %}
    <bolt-button color="primary" url="https://google.com">
      <bolt-icon slot="before" name="arrow-left"></bolt-icon>
      <strong>Button with 2</strong> <em>slotted</em> icons
      <bolt-icon slot="after" name="chevron-right"></bolt-icon>
    </bolt-button>
  {% endcell %}
{% endgrid %}
