{% set attributes = create_attribute(attributes|default({})) %}
{% set base_class = "c-bolt-li" %}

{% set classes = [
  "#{base_class}",
  type ? "#{base_class}--#{type}-item",
  last ? "#{base_class}--last-item",
] %}

{% if nested %}
  {% if index == 1 %}
    <bolt-li {{ attributes }}>
        <li class="{{ classes|join(" ") }}"><ssr-keep for="bolt-li">
  {% endif %}
  {{ children }}
  {% if length == index %}
        </ssr-keep></li>
    </bolt-li>
  {% endif %}
{% else %}
  <bolt-li {{ attributes }}>
    <li class="{{ classes|join(" ") }}">
      <ssr-keep for="bolt-li">
        {{ children }}
      </ssr-keep>
    </li>
  </bolt-li>
{% endif %}
