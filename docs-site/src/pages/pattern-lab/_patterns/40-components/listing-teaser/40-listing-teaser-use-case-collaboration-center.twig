      name: 'questions',
      size: 'large',
      color: 'teal',
    } only %}
  {% endset %}
  {% set icon_discussions %}
    {% include '@bolt-components-icon/icon.twig' with {
      name: 'discussions',
      size: 'large',
      color: 'orange',
    } only %}
  {% endset %}
  {% set icon_ideas %}
