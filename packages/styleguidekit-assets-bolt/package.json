  "bugs": "https://github.com/pattern-lab/patternlab-node/issues",
  "devDependencies": {
    "@bolt/build-tools": "^1.3.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "clipboard": "^2.0.1",
    "jquery": "^3.3.1",
    "prism": "^4.1.2",
    "typeahead.js": "^0.11.1",
