{% set schema = get_data('@bolt-components-card/card.schema.yml') %}
{% set code %} {% verbatim %}
{% include "@bolt-components-card/card.twig" with {
  url: "javascript:",
  contentItems: [
    {
      pattern: "image",
      src: "/images/sample/anthem-video.jpg",
      imageAttributes: create_attribute(imageAttributes | default({})).addClass("u-bolt-width-1/1"),
      alt: "Anthem Video"
    },
    {
      pattern: "eyebrow",
      text: "Video"
    },
    {
      pattern: "headline",
      tag: "h3",
      size: "large",
      text: "Anthem: Service Desktop"
    },
    {
      pattern: "text",
      text: "Anthem debuts its next-generation service desktop, driving frictionless customer experiences."
    },
    {
      pattern: "button",
      style: "text",
      width: "full",
      itemAlignment: "start",
      text: "Get the report"
    }
  ]
} only %}
{% endverbatim %}
{% endset %}

{% include '@utils/docs.twig' with {
  schema: schema,
  code: code,
  readmeFile: '@bolt-components-card/README.md',
} only %}