{% set schema = bolt.data.elements['@bolt-elements-link'].schema %}

{% if enable_json_schema_validation %}
  {{ validate_data_schema(schema, _self) | raw }}
{% endif %}

{# Variables #}
{% set this = init(schema) %}

{% set classes = [
  'e-bolt-link',
  icon_position ? 'e-bolt-link--icon-' ~ icon_position : '',
] %}

{# All of this is written in one line to avoid any unwanted white-space. #}
{% spaceless %}<a class="{{ classes|join(' ') }}" {{ this.props|without('content')|without('class') }}>{{ content }}</a>{% endspaceless %}
