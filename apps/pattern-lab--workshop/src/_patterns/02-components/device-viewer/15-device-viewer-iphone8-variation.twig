{% set schema = get_data('@bolt-components-device-viewer/device-viewer.schema.yml') %}

{% for color in schema.properties.color.enum %}
  <p>Color: {{ color }} Orientation: 'portrait'</p>
  {% include "@bolt-components-device-viewer/device-viewer.twig" with {
    device: "iphone8",
    orientation: "portrait",
    color: color,
    image: {
      src: "/images/content/screenshots/device-screenshot--phone.jpg",
      lazyload: false
    }
  } %}

  <p>Color: {{ color }} Orientation: 'landscape'</p>
  {% include "@bolt-components-device-viewer/device-viewer.twig" with {
    device: "iphone8",
    orientation: "landscape",
    color: color,
    image: {
      src: "/images/content/screenshots/device-screenshot--tablet.jpg",
      lazyload: false
    }
  } %}

{% endfor %}

<p>Magnification: true Orientation: 'portrait'</p>
{% include "@bolt-components-device-viewer/device-viewer.twig" with {
  device: "iphone8",
  orientation: "portrait",
  color: "white",
  image: {
    src: "/images/content/screenshots/device-screenshot--phone.jpg",
    lazyload: false
  },
  magnify: true
} %}

<p>Magnification: true Orientation: 'landscape'</p>
{% include "@bolt-components-device-viewer/device-viewer.twig" with {
  device: "iphone8",
  orientation: "landscape",
  color: "black",
  image: {
    src: "/images/content/screenshots/device-screenshot--tablet.jpg",
    lazyload: false
  },
  magnify: true
} %}