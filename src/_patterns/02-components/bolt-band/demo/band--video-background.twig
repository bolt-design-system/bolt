{% embed "@bolt/band.twig" with {
  theme: "dark",
  size: "medium",
  background: {
    "opacity": "heavy",
    "fill": "color",
    "focalPoint": {
      "vertical": "center",
      "horizontal": "center"
    },
    "contentItems": [
      {
        "pattern": "image",
        "src": "/images/sample/background-banner--left-focal-point.jpg"
      },
      {
        "pattern": "video",
        "isBackgroundVideo": true,
        "videoId": "5609376179001",
        "accountId": "1900410236",
        "playerId": "r1CAdLzTW",
        "attributes": {
          "class": [
            "js-video-bg-test-1"
          ]
        }
      }
    ]
  }
} %}
  {% block band_content %}
    {% include "@bolt/headline.twig" with {
      text: "What's Trending",
      size: "xlarge",
      tag: "h3"
    } only %}
    {% include "@bolt/button.twig" with {
      text: "Toggle video",
      attributes: {
        "on-click": "toggle",
        "on-click-target": "js-video-bg-test-1"
      }
    } only %}
    {{ parent() }}
  {% endblock band_content %}
{% endembed %}