{% set prefix = "c-bolt-" %}

{% set themeOptions = [
  "xlight",
  "light",
  "medium",
  "dark",
  "xdark"
] %}

{% set vspacingOptions = [
  "xsmall",
  "small"
] %}


{% set componentName = "nav-bar" %}
{% set baseClass = prefix ~ componentName %}


{% set theme = theme == false and theme is not null ? "false" : theme | default("medium") %}
{% set gradient = gradient == false and gradient is not null ? "false" : "true" | default("true") %}
{% set vspacing = vspacing == false and vspacing is not null ? "false" : vspacing | default("xsmall") %}


{% set Classes = [
  baseClass
] %}

<bolt-{{ componentName }} bolt-component>

  {% embed "@bolt/band.twig" with {
    size: vspacing,
    theme: theme,
    fullBleed: true
  } %}

    {% block band_background %}
      {% if gradient == "true" %}
        {% include "@bolt/background.twig" with {
          "opacity": "light",
          "fill": "gradient",
          "focalPoint":
          {
            "vertical": "center",
            "horizontal": "left"
          }
        } only %}
      {% endif %}
    {% endblock band_background %}

    {% block band_content %}
      <nav class="c-bolt-nav-bar">
        {% if title %}
          {% include "@bolt-components-nav-bar/nav-bar__title.twig" with title only %}
        {% endif %}

        {% if links %}
          <div class="c-bolt-nav-bar__nav">
            {% include "@bolt-components-nav-list/nav-list.twig" with links only %}
          </div>
        {% endif %}
      </nav>
    {% endblock %}

  {% endembed %}

</bolt-{{ componentName }}>

{% if enable_json_schema_validation %}
  {{ validate_data_schema('@bolt-components-nav-bar/nav-bar.schema.yml', _self) }}
{% endif %}
