{# Schema Validation #}
{% set schema = bolt.data.components['@bolt-components-page-header'].schema %}
{% if enable_json_schema_validation %}
  {{ validate_data_schema(schema, _self)|raw }}
{% endif %}

{# Variables #}
{% set this = init(schema) %}
{% set attributes = create_attribute(attributes|default({})) %}

{% set classes = [
  'c-bolt-page-header__nav',
] %}

<button aria-haspopup="true" aria-expanded="false" class="c-bolt-page-header__action-trigger c-bolt-page-header__action-trigger--nav" id="js-bolt-page-header-primary-nav-toggle">
  <span class="c-bolt-page-header__action-trigger__text">
    Toggle Main Site Navigation
  </span>
  <span class="c-bolt-page-header__action-trigger__icon" aria-hidden="true">
    {% include '@bolt-components-icon/icon.twig' with {
      name: 'menu'
    } only %}
  </span>
  <span class="c-bolt-page-header__action-trigger__icon c-bolt-page-header__action-trigger__icon--close" aria-hidden="true">
    {% include '@bolt-components-icon/icon.twig' with {
      name: 'close'
    } only %}
  </span>
</button>
<nav {{ attributes.addClass(classes)|without('id')|without('aria-label') }} id="js-bolt-page-header-primary-nav" aria-label="Main Site Navigation">
  <div class="c-bolt-page-header__nav-list-group">
    {{ content }}
  </div>
</nav>
