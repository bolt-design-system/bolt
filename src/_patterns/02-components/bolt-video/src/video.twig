{% set prefix = "c-bolt-" %}

{% set videoUuid = videoUuid | default("js-bolt-video-uuid--" ~ random()) %}

{% set attributes = create_attribute(attributes|default({})) %}
{% set attributes = attributes.addClass(videoUuid) %}


{% set componentName = "video" %}
{% set baseClass = prefix ~ componentName %}

{% set collapsed = collapsed | default(true) %}
{% set ratio = ratio ?? true %}


{% set classes = [
  baseClass,
  collapsed is not null and collapsed == false ? "is-expanded" : "is-collapsed"
] %}


{% set videoTag %}
  {% include "@bolt/_video-tag.twig" %}
  <div class="c-bolt-video__wrapper">
    {% embed "@bolt/wrapper.twig" with {
      attributes: {
        class: [
          "u-bolt-padding-left-none",
          "u-bolt-padding-right-none"
        ]
      }
    } %}
      {% block wrapper_content %}
        <div class="c-bolt-video__close-button">
          {% include "@bolt/button.twig" with {
            text: "Close video",
            tag: "button",
            size: "xsmall",
            style: "secondary",
            iconOnly: true,
            rounded: true,
            icon: {
              name: "close",
              size: "small"
            },
            attributes: {
              "on-click": "close",
              "on-click-target": videoUuid
            }
          } only %}
        </div>
      {% endblock %}
    {% endembed %}
  </div>
{% endset %}

{% if ratio == true %}
  {% include "@bolt/ratio.twig" with {
    aspectRatioHeight: aspectRatioHeight ?? 9,
    aspectRatioWidth: aspectRatioWidth ?? 16,
    children: videoTag
  } only %}
{% else %}
  {{ videoTag }}
{% endif %}