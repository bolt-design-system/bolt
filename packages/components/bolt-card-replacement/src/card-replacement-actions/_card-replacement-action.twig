{% set schema = bolt.data.components["@bolt-components-card-replacement"].schema.properties.actions %}
{% set this = init(schema) %}

<bolt-card-replacement-action
  {% if this.data.external.value %} external {% endif %}
  {% if this.data.url.value %} url="{{this.data.url.value}}" {% endif %}
  >
  <ssr-keep for="bolt-card-replacement-action" class="c-bolt-card_replacement__action">
    {% block action_item %}
      {% if this.data.text.value %}
        {% set button_props = {
          text: this.data.text.value,
          hierarchy: "text",
          width: "full",
          align: "start",
          target: this.data.external.value == true ? "_blank" : "_self",
          attributes: attributes|default({})
        } %}

        {% if this.data.icon.value != 'none' %}
          {% if this.data.icon.value %}
            {% set button_props = button_props|merge({ icon: { name: this.data.icon.value } }) %}
          {% elseif this.data.external.value == false or this.data.external.value == null %}
            {% set button_props = button_props|merge({ icon: { name: "chevron-right" } }) %}
          {% else %}
            {% set button_props = button_props|merge({ icon: { name: "external-link" } }) %}
          {% endif %}
        {% endif %}

        {% if spacing is not empty %}
          {% set button_props = button_props|merge({ size: spacing }) %}
        {% endif %}

        {% if this.data.url.value %}
          {% set button_props = button_props|merge({ url: this.data.url.value }) %}
        {% endif %}

        {% include "@bolt-components-button/button.twig" with button_props only %}
      {% endif %}
    {% endblock %}
  </ssr-keep>
</bolt-card-replacement-action>
