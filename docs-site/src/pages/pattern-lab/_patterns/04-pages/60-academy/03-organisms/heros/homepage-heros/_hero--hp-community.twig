{% set content %}
  {% grid "o-bolt-grid--flex o-bolt-grid--middle o-bolt-grid--center o-bolt-grid--matrix" %}
    {% cell "u-bolt-width-12/12 u-bolt-width-8/12@medium u-bolt-text-align-center" %}
      {% include "@bolt-components-headline/headline.twig" with {
        size: "xxlarge",
        weight: "bold",
        align: "center",
        text: "Join the community and share your ideas.",
        attributes: {
          class: [
            "u-bolt-margin-bottom-large"
          ]
        }
      } only %}

      {% include "@bolt-components-headline/subheadline.twig" with {
        size: "xlarge",
        weight: "light",
        align: "center",
        text: "Our open ecosystem is changing the way the world builds software - and redefining who gets to build it.",
      } only %}

      {% include "@bolt-components-button/button.twig" with {
        size: "medium",
        border_radius: "full",
        text: "Explore Pega Community"
      } only %}
    {% endcell %}

    {% cell "u-bolt-width-12/12" %}
      {% include "@bolt-components-image/image.twig" with {
        src: "/images/community-hero-temp-cropped.png",
        attributes: {
          class: [
            "u-bolt-margin-top-xlarge"
          ],
          style: [
            "margin-bottom: -3.3rem;"
          ]
        }
      } only %}
    {% endcell %}

  {% endgrid %}
{% endset %}

{# .rectangle {
	height: 931px;
	width: 1439px;
	background: linear-gradient(181deg, rgba(6,214,214,0.82) 0%, #06304B 100%);
} #}
{% include "@bolt-components-band/band.twig" with {
  theme: "light",
  content: content,
} only %}
