{% set description %}
  When appropriate, an <bolt-code-snippet display="inline" lang="html">&lt;a&gt;</bolt-code-snippet> element can use the button style. For example, the button helps to navigate to another page.
{% endset %}

{% set demo %}
  {% include '@bolt-elements-button/button.twig' with {
    content: 'This looks like a button but semantically is an anchor',
    link: true,
    attributes: {
      href: 'https://pega.com'
    }
  } only %}
{% endset %}

{% set twig_markup %}
{% verbatim %}
{% include '@bolt-elements-button/button.twig' with {
  content: 'This looks like a button but semantically is an anchor',
  link: true,
  attributes: {
    href: 'https://pega.com'
  }
} only %}
{% endverbatim %}
{% endset %}

{% set html_markup %}
{% verbatim %}
<a href="https://pega.com" class="e-bolt-button">This looks like a button but semantically is an anchor</a>
{% endverbatim %}
{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Button as an &lt;a&gt; element',
  description: description,
  demo: demo,
  twig_markup: twig_markup,
  html_markup: html_markup,
} only %}
