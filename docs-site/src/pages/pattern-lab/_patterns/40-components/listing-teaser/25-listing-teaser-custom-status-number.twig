{% set notes %}
  The <code>status.number_items</code> prop will override the <code>replies</code> and <code>views</code> props.
{% endset %}

{% set demo %}
  {% set icon_questions %}
    {% include '@bolt-components-icon/icon.twig' with {
      name: 'questions',
      size: 'large',
      color: 'teal',
    } only %}
  {% endset %}
  {% set icon_reply %}
    {% include '@bolt-components-icon/icon.twig' with {
      name: 'reply',
      size: 'small',
    } only %}
  {% endset %}
  {% set icon_heart %}
    {% include '@bolt-components-icon/icon.twig' with {
      name: 'heart',
      size: 'small',
    } only %}
  {% endset %}
  {% set icon_eye %}
    {% include '@bolt-components-icon/icon.twig' with {
      name: 'eye',
      size: 'small',
    } only %}
  {% endset %}
  {% set number_items %}
    {% include '@bolt-components-listing-teaser/listing-teaser-status-number.twig' with {
      number: '167',
      label: 'Upvotes',
    } only %}
    {% include '@bolt-components-listing-teaser/listing-teaser-status-number.twig' with {
      number: '25',
      label: 'Pins',
    } only %}
    {% include '@bolt-components-listing-teaser/listing-teaser-status-number.twig' with {
      number: '8k',
      label: 'Subs',
    } only %}
  {% endset %}
  {% include '@bolt-components-listing-teaser/listing-teaser.twig' with {
    signifier: icon_questions,
    headline: {
      text: 'This listing has custom status numbers',
      tag: 'h3',
      size: 'large',
      link_attributes: {
        href: 'https://pega.com'
      },
    },
    meta_items: [
      'Posted 8 hours 15 minutes ago',
      'Last activity: 2 minutes ago',
    ],
    status: {
      number_items: number_items,
    },
  } only %}
{% endset %}

{% set twig_markup %}
{% verbatim %}
// Set up number_items variable
{% set number_items %}
  {% include '@bolt-components-listing-teaser/listing-teaser-status-number.twig' with {
    number: '167',
    label: 'Upvotes',
  } only %}
  {% include '@bolt-components-listing-teaser/listing-teaser-status-number.twig' with {
    number: '25',
    label: 'Pins',
  } only %}
  {% include '@bolt-components-listing-teaser/listing-teaser-status-number.twig' with {
    number: '8k',
    label: 'Subs',
  } only %}
{% endset %}

// Use the variable in status.number_items prop
{% include '@bolt-components-listing-teaser/listing-teaser.twig' with {
  headline: {
    text: 'This listing has custom status numbers',
    tag: 'h3',
    size: 'large',
    link_attributes: {
      href: 'https://pega.com'
    },
  },
  meta_items: [
    'Posted 8 hours 15 minutes ago',
    'Last activity: 2 minutes ago',
  ],
  status: {
    number_items: number_items,
  },
} only %}
{% endverbatim %}
{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Listing Custom Status Number',
  description: 'A listing can have completely custom status numbers instead of replies and views.',
  demo: demo,
  notes: notes,
  twig_markup: twig_markup,
} only %}
