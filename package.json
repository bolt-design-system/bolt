{
  "name": "bolt",
  "version": "0.1.0",
  "description": "Pega Digital Design System",
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "build": "gulp build",
    "commitmsg": "validate-commit-msg",
    "deploy:surge": "npm run build && surge sandbox/pattern-library/public $npm_package_config_surgeDomain",
    "fix:scripts": "gulp scripts:fix",
    "fix:scss": "gulp styles:fix",
    "fix": "gulp fix",
    "lint": "eslint ./packages/bolt-build-tools",
    "prepublishOnly": "npm run snyk-protect",
    "publish-please": "publish-please",
    "publish-canary": "lerna run build && lerna run publish-please && lerna publish --canary --yes",
    "publish-next": "lerna run build && lerna run publish-please && lerna publish --npm-tag=next",
    "publish": "lerna run build && lerna run publish-please && lerna publish",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "serve": "gulp serve",
    "setup:composer": "cd sandbox/pattern-library && rm composer.lock && rm -rf vendor && composer install --no-interaction --prefer-dist --no-dev",
    "setup:homebrew": "sh scripts/install-homebrew.sh",
    "snyk-protect": "snyk protect",
    "mocha": "mocha packages/**/*/tests",
    "test": "npm run mocha && npm run lint",
    "lint:watch": "nodemon --ignore node_modules -w packages/ --exec 'npm test'",
    "lint:fix": "eslint --fix ./packages/bolt-build-tools"
  },
  "pre-commit": [
    "test",
    "build"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "Subject does not match subject pattern!",
      "types": [
        "chore",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "style",
        "test"
      ],
      "warnOnFail": false
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pega-digital/bolt.git"
  },
  "keywords": [
    "design",
    "system"
  ],
  "author": "Salem Ghoweri",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pega-digital/bolt/issues"
  },
  "homepage": "https://github.com/pega-digital/bolt#readme",
  "dependencies": {
    "@bolt/tool-strip-unit": "^0.2.0-alpha.b42df1b9",
    "@bolt/tools-strip-unit": "^0.2.0-alpha.40b17e25",
    "autoprefixer": "^7.1.2",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.0",
    "chai-fs": "^1.0.0",
    "child_process": "^1.0.2",
    "cz-conventional-changelog": "^2.0.0",
    "delete-empty": "^1.0.1",
    "dotenv": "^4.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.7.0",
    "fs": "0.0.1-security",
    "glob": "^7.1.2",
    "gulp": "gulpjs/gulp#4.0",
    "gulp-babel": "^6.1.2",
    "gulp-clip-empty-files": "^0.1.2",
    "gulp-data": "^1.2.1",
    "gulp-flatten": "^0.3.1",
    "gulp-intermediate": "^3.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "gulp-twig": "^0.7.0",
    "gulp-twig-php": "^0.2.1",
    "gulp-util": "^3.0.8",
    "html-minifier": "^3.5.2",
    "http2": "^3.3.6",
    "husky": "^0.14.3",
    "i": "^0.3.5",
    "import-postcss": "^8.0.2",
    "inquirer": "^3.2.0",
    "lerna": "^2.0.0",
    "merge": "^1.2.0",
    "minimatch": "^3.0.4",
    "mocha": "^3.4.2",
    "node-sass": "^4.5.3",
    "node-slack": "0.0.7",
    "node-twig": "^1.1.0",
    "nodemon": "^1.11.0",
    "npm": "^5.3.0",
    "onchange": "^3.2.1",
    "path": "^0.12.7",
    "postcss-cli": "^4.1.0",
    "postcss-smart-import": "^0.7.5",
    "precommit": "^1.2.2",
    "publish-please": "^2.3.1",
    "request": "^2.81.0",
    "sassdoc": "^2.3.0",
    "sassdoc-theme-default": "^2.6.1",
    "sassdoc-theme-herman": "^1.0.0-alpha.9",
    "semantic-release": "^6.3.6",
    "snyk": "^1.36.2",
    "stylefmt": "^6.0.0",
    "stylelint": "^7.13.0",
    "stylelint-scss": "^1.5.1",
    "stylelint-selector-bem-pattern": "^1.1.0",
    "surge": "^0.18.0",
    "validate-commit-msg": "^2.12.2"
  },
  "snyk": true,
  "devDependencies": {
    "pre-commit": "^1.2.2"
  }
}
