{
  "lerna": "3.10.7",
  "version": "3.0.2",
  "command": {
    "publish": {
      "allowBranch": [
        "master",
        "next",
        "next/*",
        "release/*",
        "develop"
      ],
      "conventionalCommits": true,
      "gitReset": true,
      "includeMergedTags": true,
      "noCommitHooks": true,
      "verifyAccess": true
    },
    "changed": {
      "includeMergedTags": true
    }
  },
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/*.md",
    "**/__snapshots__/**"
  ],
  "npmClient": "yarn",
  "npmClientArgs": [
    "--ignore-optional"
  ],
  "useWorkspaces": true
}
