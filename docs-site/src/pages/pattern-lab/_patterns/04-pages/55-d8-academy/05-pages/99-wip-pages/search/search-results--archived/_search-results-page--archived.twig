{% extends "@academy/search-results-template.twig" %}

{% block main %}
  {# Hero #}
  {% include "@academy/_hero--archived.twig" %}


  {# Body Top #}
  {% include "@academy/_nav--search.twig" %}
  {% include "@academy/_hero--archived-text.twig" %}

  {# Body #}
  {% set content %}
    {% grid "o-bolt-grid--flex o-bolt-grid--center o-bolt-grid--matrix" %}
      {% cell "u-bolt-width-12/12 u-bolt-width-3/12@medium" %}
        {% include "@academy/_form--search-filter.twig" %}
      {% endcell %}
      {% cell "u-bolt-width-1/1 u-bolt-width-9/12@medium" %}
        {% include "@academy/_card-list.twig" %}
        {% include "@academy/_pagination.twig" %}
      {% endcell %}
    {% endgrid %}
  {% endset %}

  {% include "@bolt-components-band/band.twig" with {
    theme: "light",
    size: "small",
    content: content,
  } only %}

{% endblock %}
