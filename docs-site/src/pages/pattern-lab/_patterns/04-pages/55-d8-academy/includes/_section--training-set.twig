{% set content %}
  {% grid "o-bolt-grid--flex o-bolt-grid--matrix" %}
    {% cell "u-bolt-width-12/12 u-bolt-width-8/12@small u-bolt-flex-grow" %}
      {% include "@bolt-components-headline/headline.twig" with {
        text: "In Progress Missions",
        size: "xxlarge",
        weight: "semibold",
      } only %}
    {% endcell %}
    {% cell "u-bolt-flex-shrink" %}
      {% include "@bolt-components-button/button.twig" with {
        style: "secondary",
        size: "large",
        border_radius: "full",
        text: "Show all (10)"
      } only %}
    {% endcell %}
  {% endgrid %}

  {% grid "o-bolt-grid--flex o-bolt-grid--matrix u-bolt-padding-top-medium" %}
    {% cell "u-bolt-width-12/12 u-bolt-width-6/12@small u-bolt-width-4/12@medium" %}
      {% include "@academy/includes/_card--placeholder.twig" %}
    {% endcell %}
    {% cell "u-bolt-width-12/12 u-bolt-width-6/12@small u-bolt-width-4/12@medium" %}
      {% include "@academy/includes/_card--placeholder.twig" %}
    {% endcell %}
    {% cell "u-bolt-width-12/12 u-bolt-width-6/12@small u-bolt-width-4/12@medium" %}
      {% include "@academy/includes/_card--placeholder.twig" %}
    {% endcell %}
  {% endgrid %}
{% endset %}

{% include "@bolt-components-band/band.twig" with {
  theme: theme|default("xlight"),
  content: content,
} only %}
