{% macro slotted_icon(icon, icon_position, slot_name) %}
  {% if icon and icon_position == slot_name %}
    <ssr-keep class="c-bolt-chip__icon" for="bolt-chip">
      {% set icon = icon | merge({
        attributes: {
          slot: slot_name
        }
      }) %}
      {% include "@bolt-components-icon/icon.twig" with icon only %}
    </ssr-keep>
  {% endif %}
{% endmacro %}
