{% set headingExamples = {
  h1: "xxxlarge",
  h2: "xxlarge",
  h3: "xlarge",
  h4: "large",
  h5: "medium",
  h6: "small",
  p: "small",
  span: "xsmall",
  cite: "xsmall",
  div: "xsmall",
} %}

{% for tag, heading in headingExamples %}
  <p>{{ tag|upper }}</p>
  {% include "@bolt-components-text/text.twig" with {
    headline: true,
    text: "This is an example of " ~ tag|upper ~ " with " ~ heading ~ " font size",
    tag: tag,
    fontSize: heading
  } only %}
{% endfor %}
