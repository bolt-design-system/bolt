{
  "name": "@bolt/styleguidekit-assets-bolt",
  "version": "1.0.0-alpha.5",
  "description": "Front-end assets and templates for the default Pattern Lab workshop view",
  "main": "gulpfile.js",
  "scripts": {
    "build": "bolt build",
    "build:noisy": "bolt build --verbosity 5",
    "build:prod": "bolt build --prod",
    "serve": "bolt serve",
