{% set description %}
  Article List is a way to display teasers for a list of articles.
{% endset %}

{% set notes %}
  <bolt-ol>
    <bolt-li>An article list is composed of the Post component and the List component with solid separators.</bolt-li>
    <bolt-li>Keep in mind the signifier and headline vertically center align with each other. When using image as the signifier, it is recommended to use 32px in tandem with large headline, and 38px in tandem with xlarge headline.</bolt-li>
  </bolt-ol>
{% endset %}

{% set demo %}
  {% set signifier_1 %}
    <img src="/images/placeholders/thumb-square-abstract.jpg" alt="" width=32 height=32 class="u-bolt-border-radius-small">
  {% endset %}
  {% set signifier_2 %}
    <img src="/images/placeholders/thumb-square-fire.jpg" alt="" width=32 height=32 class="u-bolt-border-radius-small">
  {% endset %}
  {% set signifier_3 %}
    <img src="/images/placeholders/thumb-square-ivy.jpg" alt="" width=32 height=32 class="u-bolt-border-radius-small">
  {% endset %}
  {% set article_0 %}
    {% include '@bolt-components-post/post.twig' with {
      signifier: signifier_1,
      headline: {
        text: 'This is an article',
        tag: 'h3',
        size: 'large',
        link_attributes: {
          href: 'https://pega.com'
        },
      },
      meta_items: [
        'Category',
        'Duration',
        'Posted by Name',
      ],
    } only %}
  {% endset %}
  {% set article_1 %}
    {% include '@bolt-components-post/post.twig' with {
      signifier: signifier_1,
      headline: {
        text: 'How low-code is eliminating technical debt',
        tag: 'h3',
        size: 'large',
        link_attributes: {
          href: 'https://pega.com'
        },
      },
      meta_items: [
        'Whitepaper',
        '3 min read',
        'Posted by Matt Healy on Jan 22, 2021',
      ],
    } only %}
  {% endset %}
  {% set article_2 %}
    {% include '@bolt-components-post/post.twig' with {
      signifier: signifier_2,
      headline: {
        text: 'How autonomous customer service will shape the future',
        tag: 'h3',
        size: 'large',
        link_attributes: {
          href: 'https://pega.com'
        },
      },
      meta_items: [
        'Whitepaper',
        '3 min read',
        'Posted by Jeff Nicholson on Jan 5, 2021',
      ],
    } only %}
  {% endset %}
  {% set article_3 %}
    {% include '@bolt-components-post/post.twig' with {
      signifier: signifier_3,
      headline: {
        text: '3 steps to implementing a successful DevOps culture',
        tag: 'h3',
        size: 'large',
        link_attributes: {
          href: 'https://pega.com'
        },
      },
      meta_items: [
        'Video',
        '10:23',
        'Posted by Genifer Graff on Dec 14, 2020',
      ],
    } only %}
  {% endset %}

  {% include '@bolt-components-list/list.twig' with {
    spacing: 'small',
    inset: true,
    separator: 'solid',
    items: [
      article_0,
      article_1,
      article_2,
      article_3,
    ]
  } only %}
{% endset %}

{% set twig_markup %}
{% verbatim %}
// Set up a particular article
{% set thumbnail %}
  <img src="/image.jpg" alt="" width=32 height=32>
{% endset %}
{% set demo_article %}
  {% include '@bolt-components-post/post.twig' with {
    signifier: thumbnail,
    headline: {
      text: 'This is an article',
      tag: 'h3',
      size: 'large',
      link_attributes: {
        href: 'https://pega.com'
      },
    },
    meta_items: [
      'Category',
      'Duration',
      'Posted by Name',
    ],
  } only %}
{% endset %}

// Render a list to display articles
{% include '@bolt-components-list/list.twig' with {
  spacing: 'small',
  inset: true,
  separator: 'solid',
  items: [
    demo_article,
  ]
} only %}
{% endverbatim %}
{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Use Case: Article List',
  description: description,
  demo: demo,
  notes: notes,
  twig_markup: twig_markup,
} only %}
