{% set schema = bolt.data.components['@bolt-components-page-header'].schema %}

{% if enable_json_schema_validation %}
  {{ validate_data_schema(schema, _self)|raw }}
{% endif %}

{# Variables #}
{% set this = init(schema) %}
{% set attributes = create_attribute(attributes|default({})) %}

{% set classes = [
  'js-bolt-page-header-nav',
  category ? 'js-bolt-page-header-nav--' ~ category,
  'c-bolt-page-header__nav-list',
  category ? 'c-bolt-page-header__nav-list--' ~ category,
  popover_position ? 'c-bolt-page-header__nav-list--' ~ popover_position,
] %}

<ul {{ attributes.addClass(classes) }} {% if category == 'site' and nav_link_spacing %}style="--c-bolt-page-header-desktop-site-nav-link-spacing-x: {{ nav_link_spacing }}"{% endif %}>
  {{ content }}
</ul>
