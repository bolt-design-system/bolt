{# Setting variables for demo purposes #}
{% set schema = bolt.data.components['@bolt-components-chip'].schema %}

<bolt-text headline>Border Radius</bolt-text>
<bolt-list display="inline">
  {% for border_radius in schema.properties.border_radius.enum %}
    <bolt-list-item>
      {# Start component specific code #}
      {% include '@bolt-components-chip/chip.twig' with {
        text: border_radius,
        border_radius: border_radius,
      } only %}
      {# End component specific code #}
    </bolt-list-item>
  {% endfor %}
</bolt-list>
