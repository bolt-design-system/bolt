{% extends "@pl/_default-page-template.twig" %}

{% block global_header %}
  {% include "@bolt/page-header.twig" with { hideGlobalSearch: true } %}
{% endblock %}


{% block main_content %}

  {# Search Bar #}
  {% include "@academy/includes/_search-bar.twig" %}

  {# Hero #}
  {% include "@academy/includes/_hero--search-results.twig" %}

  {# Body Top #}
  {% include "@academy/includes/_nav--search.twig" %}

  {# Body #}
  {% set content %}
    {% grid "o-bolt-grid--flex o-bolt-grid--center o-bolt-grid--matrix" %}
      {% cell "u-bolt-width-1/1 u-bolt-width-3/12@medium" %}
        {% include "@academy/includes/_form--search-filter.twig" %}
      {% endcell %}
      {% cell "u-bolt-width-1/1 u-bolt-width-9/12@medium" %}
        {% include "@academy/includes/_card-list.twig" %}
        {% include "@academy/includes/_pagination.twig" %}
      {% endcell %}
    {% endgrid %}
  {% endset %}

  {% include "@bolt-components-band/band.twig" with {
    theme: "light",
    size: "small",
    content: content,
  } only %}

  {# Body Bottom #}
  {% include "@academy/includes/_band--promo.twig" %}

{% endblock %}
