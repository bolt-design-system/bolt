{% set action_band_content %}
  {% set icon_1 %}
    {% include '@bolt-components-icon/icon.twig' with {
      name: 'download',
      size: 'large'
    } %}
  {% endset %}
  {% set icon_2 %}
    {% include '@bolt-components-icon/icon.twig' with {
      name: 'copy-to-clipboard',
      size: 'large'
    } %}
  {% endset %}
  {% set icon_3 %}
    {% include '@bolt-components-icon/icon.twig' with {
      name: 'calendar',
      size: 'large'
    }%}
  {% endset %}
  {% include '@bolt-components-action-blocks/action-blocks.twig' with {
    items: [
      {
        text: 'Item 1',
        url: '#!',
        media: icon_1,
      },
      {
        text: 'Item 2',
        url: '#!',
        media: icon_2,
      },
      {
        text: 'Item 3',
        url: "#!",
        media: icon_3,
      }
    ]
  } only %}
{% endset %}

{% set page_content %}
  {% include '@bolt-components-band/band.twig' with {
    theme: 'dark',
    content: hero_band_content,
    full_bleed: false,
  } only %}
  {% include '@bolt-components-band/band.twig' with {
    theme: 'xdark',
    size: 'small',
    content: flag_band_content,
    full_bleed: false,
  } only %}
  {% include '@bolt-components-band/band.twig' with {
    theme: 'xlight',
    content: collection_band_content,
    full_bleed: false,
  } only %}
  {% include '@bolt-components-band/band.twig' with {
    theme: 'light',
    content: action_band_content,
    full_bleed: false,
  } only %}
{% endset %}

<bolt-grid>
  <bolt-grid-item column-start="1" column-span="6" data-bolt-mode="light" style="padding: 1rem;">
    <bolt-text headline>Dark Mode: OFF</bolt-text>
    {{ page_content }}
  </bolt-grid-item>
  <bolt-grid-item column-start="7" column-span="6" data-bolt-mode="dark" style="padding: 1rem;">
    <bolt-text headline>Dark Mode: ON</bolt-text>
    {{ page_content }}
  </bolt-grid-item>
</bolt-grid>
