{% embed "@bolt/band.twig" with {
  size: "none",
  theme: "light",
  fullBleed: true
} only %}
  {% block band_content %}
    {% grid "o-bolt-grid--flex o-bolt-grid--center o-bolt-grid--middle u-bolt-min-height-screen u-bolt-padding-medium" %}
      {% cell "u-bolt-width-1/1 u-bolt-width-2/3@medium" %}
        {% include "@bolt-components-headline/headline.twig" with {
          tag: "h1",
          text: "Component",
          size: "xxxlarge",
          attributes: {
            class: "u-bolt-margin-bottom-small"
          }
        } only %}
        {% include "@bolt-components-headline/eyebrow.twig" with {
          tag: "p",
          text: "[kuh m-poh-nuh nt, kom-]",
          attributes: {
            class: "u-bolt-margin-bottom-medium"
          }
        } only %}
        {% include "@bolt-components-headline/text.twig" with {
          tag: "p",
          text: "noun",
          attributes: {
            class: "u-bolt-margin-bottom-xsmall"
          }
        } only %}
        {% include "@bolt-components-ordered-list/ordered-list.twig" with {
          contentItems : [
            {
              text: "a constituent part; element; ingredient."
            },
            {
              text: "a part of a design system."
            },
            {
              text: "<em>Boltism</em>. a reusable user interface element that has been broken down to its most basic and flexible form, with options to configure (e.g. a band has 4 color themes and various spacing sizes)."
            }
          ]
        } only %}
      {% endcell %}
    {% endgrid %}
  {% endblock %}
{% endembed %}
