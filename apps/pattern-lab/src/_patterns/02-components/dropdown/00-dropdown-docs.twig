    {% include "@bolt-components-nav/nav.twig" with {
      "links": [
        {
        "text": "Link 1 Text",
        "url": "#link-1-url"
      },
      {
        "text": "Link 2 Text",
        "url": "#link-2-url"
      },
      {
        "text": "Link 3 Text",
        "url": "#link-3-url"
      }
      ]
    } %}
