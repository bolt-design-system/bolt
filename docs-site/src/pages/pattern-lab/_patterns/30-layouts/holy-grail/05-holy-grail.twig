{% set description %}
  The Holy Grail layout renders a sidebar on the left and another on the right. The sidebars are sticky at and above medium breakpoint and transform into modals below medium breakpoint.
{% endset %}

{% set demo %}
  {% include '@bolt-layouts-holy-grail/holy-grail.twig' with {
    content: 'This is a holy grail layout.',
    sidebar: {
      content: 'Primary sidebar',
    },
    secondary_sidebar: {
      content: 'Secondary sidebar',
    },
  } only %}
{% endset %}

{% set twig_markup %}
{% verbatim %}
{% include '@bolt-layouts-holy-grail/holy-grail.twig' with {
  content: 'This is a holy grail layout.',
  sidebar: {
    content: 'Primary sidebar',
  },
  secondary_sidebar: {
    content: 'Secondary sidebar',
  },
} only %}
{% endverbatim %}
{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Basic holy grail layout',
  description: description,
  demo: demo,
  twig_markup: twig_markup,
} only %}
