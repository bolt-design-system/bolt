{% set thumbnail_1 %}
  {% include '@bolt-components-image/image.twig' with {
    src: "/images/placeholders/landscape-16x9-mountains.jpg",
    alt: "Mountains",
  } only %}
{% endset %}

{% set modal_content_1 %}
  {% set video %}
    <video-js
      data-account="1900410236"
      data-player="4fVA8Ojzs"
      data-embed="default"
      data-video-id="4892122320001"
      controls
      data-media-title
      data-media-duration
      class="c-base-video"></video-js>
  {% endset %}

  {% include "@bolt-components-ratio/ratio.twig" with {
    children: video,
    ratio: "16/9"
  } only %}
{% endset %}

{% set trigger_1 %}
  {% include "@bolt-components-trigger/trigger.twig" with {
    content: thumbnail_1,
    cursor: "zoom-in",
    display: "block",
    attributes: {
      "on-click": "show",
      "on-click-target": "js-bolt-modal-001",
    }
  } only %}
{% endset %}

{% set modal_1 %}
  {% include "@bolt-components-modal/modal.twig" with {
    attributes: {
      class: "js-bolt-modal-001"
    },
    content: modal_content_1,
    width: "optimal",
    spacing: "none",
    theme: "none",
    scroll: "overall",
  } only %}
{% endset %}

