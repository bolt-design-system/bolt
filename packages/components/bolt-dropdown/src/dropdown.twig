{% set collapse = collapse | default(false) %}
{% set _content = block('content') | default(content) %}


{% set children %}
  {% if items %}
    {% for item in items %}
      {% include "@bolt-components-dropdown/_dropdown-item.twig" with item only %}
    {% endfor %}
  {% endif %}

  {% if _content is not empty %}
    {% include "@bolt-components-dropdown/_dropdown-item.twig" %}
  {% endif %}
{% endset %}


<bolt-dropdown
  {{ collapse ? "collapse" : "" }}
  {{ center ? "center" : "" }}
  title="{{ title ? title | default("") }}"
  {{ children ? "ssr-content='#{ children|json_encode() }'" : "" }}
  >
    {{ children }}
</bolt-dropdown>

{% if enable_json_schema_validation %}
  {{ validate_data_schema('@bolt-components-dropdown/dropdown.schema.yml', _self) | raw }}
{% endif %}