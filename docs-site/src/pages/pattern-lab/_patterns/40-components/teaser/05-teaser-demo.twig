{% set modal_content %}
  {% set video %}
    <video-js
      data-account="1900410236"
      data-player="4fVA8Ojzs"
      data-embed="default"
      data-video-id="4892122320001"
      controls
      data-media-title
      data-media-duration
      class="c-base-video"></video-js>
  {% endset %}

  {% include "@bolt-components-ratio/ratio.twig" with {
    children: video,
    ratio: "16/9"
  } only %}
{% endset %}


<div class="o-bolt-grid o-bolt-grid--flex o-bolt-grid--matrix">
  <div class="o-bolt-grid__cell u-bolt-width-12/12 u-bolt-width-6/12@small u-bolt-width-4/12@medium">
    {% include '@bolt-components-teaser/teaser.twig' with {
      image : {
        src: "/images/placeholders/landscape-16x9-mountains.jpg",
        alt: "Mountains",
      },
      headline: {
        text: 'This teaser is here to test a video modal.',
        tag: 'h2',
        size: 'large',
      },
      modal_id: 'modal-001',
      modal_content: modal_content,
      chip_list: {
        size: 'xsmall',
        items: [
          {
            text: 'Video',
          },
          {
            text: 'Research',
          },
        ],
      }
    } only %}
  </div>
  <div class="o-bolt-grid__cell u-bolt-width-12/12 u-bolt-width-6/12@small u-bolt-width-4/12@medium">
    {% include '@bolt-components-teaser/teaser.twig' with {
      image : {
        src: "/images/placeholders/landscape-16x9-mountains.jpg",
        alt: "Mountains",
      },
      headline: {
        text: 'This teaser is here to test an article link.',
        tag: 'h2',
        size: 'large',
      },
      url: 'https://www.pega.com',
      chip_list: {
        size: 'xsmall',
        items: [
          {
            text: 'Article',
          },
          {
            text: 'Data',
          },
        ],
      }
    } only %}
  </div>
</div>
