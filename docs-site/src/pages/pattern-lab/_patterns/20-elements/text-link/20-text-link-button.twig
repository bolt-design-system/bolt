{% set icon_chevron_left %}
  {% include '@bolt-components-icon/icon.twig' with {
    name: 'chevron-left',
  } only %}
{% endset %}

{% set icon_chevron_right %}
  {% include '@bolt-components-icon/icon.twig' with {
    name: 'chevron-right',
  } only %}
{% endset %}

{% set icon_chevron_down %}
  {% include '@bolt-components-icon/icon.twig' with {
    name: 'chevron-down',
  } only %}
{% endset %}

{% set icon_global %}
  {% include '@bolt-components-icon/icon.twig' with {
    name: 'global',
  } only %}
{% endset %}

{% set icon_info_open %}
  {% include '@bolt-components-icon/icon.twig' with {
    name: 'info-open',
  } only %}
{% endset %}

{% set icon_arrow_left %}
  {% include '@bolt-components-icon/icon.twig' with {
    name: 'arrow-left',
  } only %}
{% endset %}

{% set icon_custom_1 %}
  <img src="/images/placeholders/500x500.jpg">
{% endset %}

{% set icon_custom_2 %}
  <img src="/images/placeholders/thumb-square-ivy.jpg">
{% endset %}

<bolt-text headline>Text Link with &lt;button&gt; Tag</bolt-text>
<p>
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: 'This is a text link button',
    button: true,
    attributes: {
      type: 'button',
    }
  } only %}
</p>

<bolt-text headline>Block Text Link</bolt-text>
<p>
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: 'This is a block text link',
    display: 'block',
    attributes: {
      href: 'https//pega.com',
    }
  } only %}
</p>


<bolt-banner status="warning">
  <bolt-icon name="warning"></bolt-icon> <strong>Use the following with caution.</strong>
</bolt-banner>

<bolt-text headline>Custom Icons</bolt-text>
<p>
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: 'This is a text link with custom icons before and after',
    icon_before: icon_custom_1,
    icon_after: icon_custom_2,
    attributes: {
      href: 'https//pega.com',
    }
  } only %}
</p>
<p>
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: 'This is a text link with a custom icon before',
    icon_before: icon_custom_1,
    attributes: {
      href: 'https//pega.com',
    }
  } only %}
</p>
<p>
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: 'This is a text link with a custom icon after',
    icon_after: icon_custom_1,
    attributes: {
      href: 'https//pega.com',
    }
  } only %}
</p>

{% set link %}
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: 'This is a text link',
    attributes: {
      href: 'javascript:',
      target: '_blank',
    }
  } only %}
{% endset %}

{% set visited_link %}
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: 'This is a visited text link',
    attributes: {
      href: '/',
      target: '_blank',
    }
  } only %}
{% endset %}

{% set a_really_long_link %}
  {% include '@bolt-elements-text-link/text-link.twig' with {
    content: 'A really long link phasellus molestie magna non est bibendum non venenatis nisl tempor Suspendisse dictum feugiat nisl ut dapibus Mauris iaculis porttitor posuere Praesent id metus massa ut blandit odio Proin',
    icon_before: icon_info_open,
    icon_after: icon_global,
    attributes: {
      href: 'javascript:',
    }
  } only %}
{% endset %}

