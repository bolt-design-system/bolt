{% set demo %}
  <bolt-layout template="tiles" padding-top="small" padding-bottom="xlarge" class="t-bolt-dark">
    <bolt-layout-item>
      <bolt-placeholder>small padding-top and xlarge padding-bottom</bolt-placeholder>
    </bolt-layout-item>
    <bolt-layout-item>
      <bolt-placeholder>small padding-top and xlarge padding-bottom</bolt-placeholder>
    </bolt-layout-item>
    <bolt-layout-item>
      <bolt-placeholder>small padding-top and xlarge padding-bottom</bolt-placeholder>
    </bolt-layout-item>
  </bolt-layout>
{% endset %}

{% set twig_markup %}
{% verbatim %}
{% include '@bolt-layouts-layout/layout.twig' with {
  padding_top: 'small',
  padding_bottom: 'xlarge',
  ...
} only %}
{% endverbatim %}
{% endset %}

{% set html_markup %}
{% verbatim %}
<bolt-layout padding-top="small" padding-bottom="xlarge">
  <bolt-layout-item>
    <!-- Content goes here -->
  </bolt-layout-item>
  <bolt-layout-item>
    <!-- Content goes here -->
  </bolt-layout-item>
</bolt-layout>
{% endverbatim %}
{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Padding',
  description: 'Padding top and bottom can be individually adjusted based on the use case.',
  demo: demo,
  twig_markup: twig_markup,
  html_markup: html_markup,
} only %}
