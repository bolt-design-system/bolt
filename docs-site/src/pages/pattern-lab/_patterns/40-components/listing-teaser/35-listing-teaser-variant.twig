{% set demo %}
  {% set icon_questions %}
    {% include '@bolt-components-icon/icon.twig' with {
      name: 'questions',
      size: 'large',
      color: 'teal',
    } only %}
  {% endset %}
  {% include '@bolt-components-listing-teaser/listing-teaser.twig' with {
    signifier: icon_questions,
    headline: {
      text: 'This listing is a card variant',
      tag: 'h3',
      size: 'large',
      link_attributes: {
        href: 'https://pega.com'
      },
    },
    meta_items: [
      'Posted 8 hours 15 minutes ago',
      'Last activity: 2 minutes ago',
    ],
    variant: 'card',
  } only %}
{% endset %}

{% set twig_markup %}
{% verbatim %}
{% include '@bolt-components-listing-teaser/listing-teaser.twig' with {
  headline: {
    text: 'This listing is a card variant',
    tag: 'h3',
    size: 'large',
    link_attributes: {
      href: 'https://pega.com'
    },
  },
  variant: 'card',
} only %}
{% endverbatim %}
{% endset %}

{% include '@utils/pattern-doc-page.twig' with {
  title: 'Listing Teaser Variant',
  description: 'By default, a listing teaser is transparent, but it can take on the card styles by setting variant to card.',
  demo: demo,
  twig_markup: twig_markup,
} only %}
