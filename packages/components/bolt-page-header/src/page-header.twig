{% set schema = bolt.data.components['@bolt-components-page-header'].schema %}

{% if enable_json_schema_validation %}
  {{ validate_data_schema(schema, _self)|raw }}
{% endif %}

{# Variables #}
{% set this = init(schema) %}
{% set attributes = create_attribute(attributes|default({})) %}

{% set classes = [
  'c-bolt-page-header',
] %}

<header {{ attributes.addClass(classes) }}>
  <div class="c-bolt-page-header__primary">
    {% if logo %}
      <a class="c-bolt-page-header__logo" href="{{ logo.url }}" aria-label="{{ logo.label }}" {{ logo.attributes }}>
        <span class="c-bolt-page-header__logo__img" aria-hidden="true">
          <img src="{{ logo.image_src }}">
        </span>
      </a>
    {% endif %}
    <div class="c-bolt-page-header__toolbar">
      {% if search_panel %}
        {{ search_panel }}
      {% endif %}
      {% if primary_nav %}
        {{ primary_nav }}
      {% endif %}
      {% if cta %}
        <a class="c-bolt-page-header__cta" href="{{ cta.url }}">
          {{ cta.content }}
        </a>
      {% endif %}
    </div>
  </div>
  <div class="c-bolt-page-header__secondary">
    {{ secondary_nav }}
  </div>
</header>
