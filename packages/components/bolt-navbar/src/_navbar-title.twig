{% set attributes = create_attribute(attributes|default({})) %}
{% set iconOnly = iconOnly is sameas(true) or iconOnly is sameas(false) ? iconOnly : scheuma.properties.iconOnly.default %}
{% if url %}
  {% set attributes = attributes.setAttribute("href", url) %}
{% endif %}


{% set navbar_title %}
  {% if icon %}
    <div class="c-bolt-navbar__title-icon">
      {% include "@bolt/icon.twig" with {
        "name": icon.name,
        "size": "large"
      } only %}
    </div>
  {% endif %}
  <{{ tag }} class="c-bolt-navbar__title-text {{ ( not text or iconOnly) ? "c-bolt-navbar__title-text--mobileOnly" : "" }}">
    {{ text ? text : "Go to" }}
  </{{ tag }}>
{% endset %}

{% if url %}
  <a class="c-bolt-navbar__title--link" {{ attributes }}>
    {{ navbar_title }}
  </a>
{% else %}
  <div class="c-bolt-navbar__title--static">
    {{ navbar_title }}
  </div>
{% endif %}
