{% extends "@academy/_landing-page-template.twig" %}

{% block page_content %}
  {% embed "@academy/landing-page-hero.twig" %}
    {% block heroSupplementalContent %}
      {% include "@bolt-components-headline/headline.twig" with {
        size: "medium",
        text: "After completing this module, you should be able to:",
        attributes: {
          class: [
            "u-bolt-margin-top-large",
            "u-bolt-margin-bottom-small",
          ]
        }
      } only %}
      {% include "@bolt-components-ul/ul.twig" with {
        items: [
          "Explain how data types group related fields to model a single entity",
          "Explain how data types group related fields to model a single entity",
          "Explain how data types group related fields to model a single entity",
        ]
      } only %}

      {% include "@bolt-components-headline/headline.twig" with {
        size: "medium",
        text: "This module is available in the following Missions:",
        attributes: {
          class: [
            "u-bolt-margin-top-large",
            "u-bolt-margin-bottom-small",
          ]
        }
      } only %}
      {% include "@bolt-components-list/list.twig" with {
        separator: "none",
        display: "block",
        spacing: "none",
        items: [
          include("@bolt-components-link/link.twig", {
            url: "https://www.google.com",
            text: "Name of Mission will go here"
          }),
          include("@bolt-components-link/link.twig", {
            url: "https://www.google.com",
            text: "Name of Mission"
          }),
          include("@bolt-components-link/link.twig", {
            url: "https://www.google.com",
            text: "Adding another mission here"
          }),
        ]
      } only %}
    {% endblock %}

    {% block heroTopicList %}

      {% include "@bolt-components-card-replacement/card-replacement.twig" with {
        theme: "xlight",
        rounded: true,
        height: "auto",
        attributes: {
          class: [
            "u-bolt-margin-bottom-small",
          ]
        },
        body: {
          content: [
            include("@bolt-components-headline/headline.twig", {
              size: "xlarge",
              text: "Topics",
              attributes: {
                class: "u-bolt-margin-bottom-small",
              }
            }),
            include("@bolt-components-list/list.twig", {
              separator: "solid",
              attributes: {
                class: [
                  "u-bolt-negative-margin-right-small",
                  "u-bolt-padding-right-medium",
                ],
              },
              items: [
                include("@academy/_module-topic-item.twig", {
                  text: "Data types",
                  duration: "10 mins",
                  viewed: true,
                }),
                include("@academy/_module-topic-item.twig", {
                  text: "Creating a data type",
                  duration: "5 mins",
                }),
                include("@academy/_module-topic-item.twig", {
                  text: "Creating a data type",
                  duration: "5 mins",
                }),
                include("@academy/_module-quiz-item.twig", {
                  text: "Module Quiz",
                  numberOfQuestionsText: "3 Questions",
                }),
                include("@academy/_module-quiz-item.twig", {
                  text: "Module Quiz",
                  numberOfQuestionsText: "3 Questions",
                  status: "passed"
                }),
                include("@academy/_module-quiz-item.twig", {
                  text: "Module Quiz",
                  numberOfQuestionsText: "3 Questions",
                  status: "failed"
                }),
              ]
            }),
          ] | join('')
        }
      } %}
    {% endblock %}
  {% endembed %}
{% endblock %}
