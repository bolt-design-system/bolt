{% set schema = bolt.data.components["@bolt-components-list"].schema %}

{% for separator in schema.properties.separator.enum %}
  {% if separator != "none" %}
    <h3>Inline list with separators ({{ separator }})</h3>
    {% include "@bolt-components-list/list.twig" with {
      display: "inline",
      separator: separator,
      items: [
        include("@bolt-components-link/link.twig", {
          text: "Item 1",
          url: "#!",
        }),
        include("@bolt-components-link/link.twig", {
          text: "Item 2",
          url: "#!",
        }),
        include("@bolt-components-link/link.twig", {
          text: "Item 3",
          url: "#!",
        }),
      ]
    } only %}
    <h3>Block list with separators ({{ separator }})</h3>
    {% include "@bolt-components-list/list.twig" with {
      display: "block",
      separator: separator,
      items: [
        include("@bolt-components-link/link.twig", {
          text: "Item 1",
          url: "#!",
        }),
        include("@bolt-components-link/link.twig", {
          text: "Item 2",
          url: "#!",
        }),
        include("@bolt-components-link/link.twig", {
          text: "Item 3",
          url: "#!",
        }),
      ]
    } only %}
  {% endif %}
{% endfor %}
