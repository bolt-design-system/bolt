{% set content %}
  <article>

    {# include "@bolt-components-band/band.twig" with {
      content: page.body|raw,
      theme: "xlight",
      attributes: {
        class: [
          "u-bolt-padding-top-none"
        ]
      }
    } only #}


    {% grid "o-bolt-grid--flex o-bolt-grid--middle o-bolt-grid--large c-bolt-band--medium u-bolt-padding-top-none o-bolt-grid--matrix" %}

      {% cell "u-bolt-width-1/1 u-bolt-width-2/3@small" %}
        {% include "@bolt/eyebrow.twig" with {
          text: "v1.0.0-beta.1"
        } only %}

        {% include "@bolt/headline.twig" with {
          text: "Bolt Design System",
          tag: "h1",
          size: "xxxlarge"
        } only %}

        {% include "@bolt/subheadline.twig" with {
          tag: "h2",
          text: "Bolt provides tools, patterns, services, and guidelines that systematically improve quality, timeliness, and consistency to the Pega ecosystem so that you can focus on what really matters.",
          size: "xxlarge"
        } only %}


        {% include "@bolt/button-group.twig" with {
          buttons: [
            {
              text: "Explore the System",
              url: "pattern-lab",
              style: "primary",
              width: "full@small"
            },
            {
              text: "Get Started",
              url: "/docs/index.html",
              style: "secondary",
              width: "full@small",
              size: "small"
            }
          ],
          contentItems: [
            {
              pattern: "text",
              tag: "p",
              text: "View the #{link("source", "https://github.com/bolt-design-system/bolt", {
                attributes: {
                  target: "_blank"
                }
              })} on Github"
            }
          ]
        } %}

      {% endcell %}


      {% cell "u-bolt-width-1/1 u-bolt-width-1/3@small" %}
        <ul class="o-bolt-ui-list">
          <li class="o-bolt-ui-list__item">
            {% include "@bolt/headline.twig" with {
              text: "Speed",
              size: "small",
              tag: "h3"
            } only %}
            {% include "@bolt/text.twig" with {
              text: "Design and develop faster.",
              size: "medium"
            } only %}
          </li>

          <li class="o-bolt-ui-list__item">
            {% include "@bolt/headline.twig" with {
              text: "Stable",
              size: "small",
              tag: "h3"
            } only %}
            {% include "@bolt/text.twig" with {
              text: "Predictable, automated testing coverage, and scalable.",
              size: "medium"
            } only %}
          </li>

          <li class="o-bolt-ui-list__item">
            {% include "@bolt/headline.twig" with {
              text: "Stunning",
              size: "small",
              tag: "h3"
            } only %}
            {% include "@bolt/text.twig" with {
              text: "On brand, consistent, elegant.",
              size: "medium"
            } only %}
          </li>
        </ul>
      {% endcell %}
    {% endgrid %}


    {% include "@bolt-components-band/band--card-collection.twig" with {
      theme: "xdark",
      size: "medium",
      contentItems: [
        {
          pattern: "card",
          contentItems: [
          {
            pattern: "image",
            lazyload: false,
            src: "/images/single-source2.jpg"
          },
          {
            pattern: "headline",
            text: "Living, cohesive design language",
            size: "large",
          },
          {
            pattern: "text",
            text: "An update to any component in the design system will roll out across every Wonderbly application, reducing variation and inconsistency in experience across our interface."
          },
          {
            pattern: "button",
            width: "full",
            text: "View the pattern library",
            style: "secondary"
          }
        ]
        },
        {
          pattern: "card",
          contentItems: [
          {
            pattern: "image",
            lazyload: false,
            src: "/images/code2.jpg"
          },
          {
            pattern: "teaser",
            headlines: [
            {
              type: "headline",
              text: "More efficiencies",
              size: "large"
            }
          ],
            content: "This single-source approach to building out our interface means we can create and iterate faster, whilst empowering engineers to implement design changes and deliver features with minimal upfront design work.",
            buttons: [
            {
              text: "Get started with Bolt",
              style: "secondary",
              url: ""
            }
          ]
          }
        ]
        },
        {
          pattern: "card",
          contentItems: [
          {
            pattern: "image",
            lazyload: false,
            src: "/images/tested.jpg"
          },
          {
            pattern: "teaser",
            headlines: [
            {
              type: "headline",
              text: "Tested, and trustworthy",
              size: "large"
            }
          ],
            content: "The design system has been tried and tested and itâ€™s scalable to all devices.",
            buttons: [
            {
              text: "Visit the component docs",
              style: "secondary",
              url: ""
            }
          ]
          }
        ]
        }
      ]
    } %}
  </article>
{% endset %}
{% include 'site.twig' with {
  content: content,
} %}
