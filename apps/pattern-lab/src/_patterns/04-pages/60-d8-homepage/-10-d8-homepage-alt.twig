{% extends "@bolt/default-template.twig" %}

{% block main_content %}

  {% set feature_band_content %}
    {% include "@bolt/ui-list.twig" with {
      contentItems : [
        {
          contentItems: [
            {
              "pattern": "eyebrow",
              "text": "Customer Retention"
            },
            {
              "pattern": "headline",
              "text": "Personalized. Not Creepy.",
              "size": "large"
            }
          ]
        },
        {
          contentItems: [
            {
              "pattern": "eyebrow",
              "text": "Sales Effectiveness"
            },
            {
              "pattern": "headline",
              "text": "Create Sales Superstars",
              "size": "large"
            }
          ]
        },
        {
          contentItems: [
            {
              "pattern": "eyebrow",
              "text": "Operations &amp; IT"
            },
            {
              "pattern": "headline",
              "text": "Stop Coding. Start Designing.",
              "size": "large"
            }
          ]
        }
      ]
    } %}
  {% endset %}

  {% set feature_band = {} %}
  {% set feature_band = feature_band | merge({
    content: feature_band_content
  }) %}



  {% embed "@bolt/band--feature.twig" with {
    teaserPosition: "left",
    teaserWidth: "2/3",
    size: "medium",
    full: true,
    theme: "dark",
    primaryTeaser: {
      eyebrow: {
        text: "Customer Service"
      },
      headlines: [
        {
          "type": "headline",
          "text": "Dynamically recommend next-best-actions for your customers.",
          "size": "xxxlarge",
          "tag": "h1"
        }
      ],
      buttons: [
        {
          text: "Call to action",
          style: "primary",
          url: "https://www.google.com"
        }
      ]
    },
    content: feature_band.content | default(content),

  } only %}
    {% block primary_teaser %}
      {{ parent() }}
      <hr>
      {% include "@bolt/blockquote.twig" with {
        "author": {
          "name": "Daniel Schulman",
          "title": "CEO, Paypal"
        },
        "content": "<p>Pega Marketing did a lot of great things for us lorem ipsum dolor sit amet consectetur. Lorem ipsum dolor sit amet.”</p>"
      } only %}

    {% endblock %}
  {% endembed %}



{% embed "@bolt/band.twig" with {
  size: "small",
  theme: "xdark",
  fullBleed: true
} only %}
  {% block band_content %}

    {% grid "o-bolt-grid--flex o-bolt-grid--middle o-bolt-grid--matrix" %}

      {% cell "u-bolt-width-1/1 u-bolt-width-3/4@small u-bolt-flex-grow" %}

        {% grid %}
          {% cell "u-bolt-width-1/1 u-bolt-width-3/4@small" %}
            {% include "@bolt/text.twig" with {
              text: "Pega is #1 in software for customer engagement and operational excellence.",
              size: "large",
              weight: "regular"
            } only %}
          {% endcell %}
        {% endgrid %}
      {% endcell %}


      {% cell "u-bolt-width-1/1@only-small" %}
        {% include "@bolt/button.twig" with {
          text: "Learn More",
          style: "flat",
          width: "full",
          size: "medium"
        } only %}
      {% endcell %}

    {% endgrid %}


  {% endblock %}
{% endembed %}



{% embed "@bolt/band--collection.twig" with {
  "theme": "light",
  "size": "medium",
  "contentItems": [
    {
      "pattern": "card",
      "contentItems": [
        {
          "pattern": "image",
          "src": "/pattern-lab/images/placeholders/1200x660.jpg"
        },
        {
          "pattern": "headline",
          "text": "2017 Forrester Wave Report",
          "size": "large",
          "tag": "h3"
        },
        {
          "pattern": "text",
          "text": "Pega cited as a Leader in The Forrester Wave™: Digital Process Automation Software, Q3 2017."
        },
        {
          "pattern": "button",
          "width": "full",
          "text": "Get the report",
          "style": "text"
        }
      ]
    },
    {
      "pattern": "card",
      "image": {
        "src": "/pattern-lab/images/content/promos/promo-16x9-anthem.jpg"
      },
      "teaser": {
        "eyebrow": {
          text: "Article"
        },
        "headlines": [
          {
            "type": "headline",
            "text": "Headline #2",
            "size": "large"
          }
        ],
        "content": "Simplify and automate to reduce costs and improve agility.",
        "buttons": [
          {
            "text": "Learn More",
            "style": "secondary",
            "url": "www.google.com/pega7",
            "width": "full"
          },
          {
            "text": "About Pega",
            "style": "secondary",
            "url": "www.google.com/pega7",
            "width": "full"
          }
        ]
      }
    },
    {
      "pattern": "card",
      "contentItems": [
        {
          "pattern": "image",
          "src": "/pattern-lab/images/content/promos/promo-16x9-ai.jpg"
        },
        {
          "pattern": "teaser",
          "headlines": [
            {
              "type": "headline",
              "text": "Headline #3",
              "size": "large"
            }
          ],
          "content": "Simplify and automate to reduce costs and improve agility.",
          "buttons": [
            {
              "text": "Learn More About Pega 7",
              "style": "text",
              "url": "www.google.com/pega7",
              "width": "full"
            }
          ]
        }
      ]
    }
  ]
} %}
  {% block band_content %}
    {% include "@bolt/headline.twig" with {
      text: "What's Trending",
      size: "xlarge",
      tag: "h3"
    } only %}
    {{ parent() }}
  {% endblock band_content %}
{% endembed %}





{% embed "@bolt/band.twig" with {
  size: "medium",
  theme: "xdark",
  fullBleed: true
} only %}
  {% block band_content %}

      {% grid "o-bolt-grid--matrix o-bolt-grid--large" %}

        {% cell "u-bolt-width-1/1 u-bolt-width-1/3@small" %}
          {% include "@bolt/image.twig" with {
            src: "/pattern-lab/images/content/promos/promo-16x9-salesforce-vs-pega.png"
          } only %}
        {% endcell %}

        {% cell "u-bolt-width-1/1 u-bolt-width-2/3@small" %}

          {% grid %}

            {% cell "u-bolt-width-1/1 u-bolt-width-3/4@small" %}

              {% include "@bolt/headline.twig" with {
                text: "There’s a real alternative to the Salesforce.com hype: Pega CRM.",
                size: "xlarge",
                tag: "h3"
              } only %}

              {% include "@bolt/paragraph.twig" with {
                text: "Considering Salesforce.com? Don’t fall for the hype. See why today’s leading enterprises choose Pega CRM."
              } only %}

              {% include "@bolt/button.twig" with {
                text: "Get Real",
                style: "primary",
                size: small
              } only %}

            {% endcell %}
          {% endgrid %}

        {% endcell %}
      {% endgrid %}

  {% endblock %}
{% endembed %}

{% endblock %}
