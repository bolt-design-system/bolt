{% set schema = bolt.data.components["@bolt-layouts-layout"].schema %}

{% if enable_json_schema_validation %}
  {{ validate_data_schema(schema, _self) | raw }}
{% endif %}

{# Variables #}
{% set this = init(schema) %}

<bolt-layout
  {{ this.props|without("items") }}
>
  {% if background %}
    {{ background }}
  {% endif %}

  {% for item in items %}
    {{ item }}
  {% endfor %}
</bolt-layout>
