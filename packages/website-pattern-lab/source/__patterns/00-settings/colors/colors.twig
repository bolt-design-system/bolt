<div class="o-bolt-grid o-bolt-grid--flex o-bolt-grid--matrix">
  {% for colorName, palette in bolt_colors %}
    <div class="o-bolt-grid__item u-bolt-width-1/4">

      <bolt-swatch class="c-bolt-swatch">
        <!-- <div class="c-bolt-swatch__inner"> -->
          {% for tone, colorValue in palette | reverse %}

          {% if tone == "initial" or tone == "default" or tone == "base" %}
            {% set isLargeColor = "c-bolt-swatch__color--large" %}
          {% else %}
            {% set isLargeColor = "" %}
          {% endif %}

            <bolt-swatch-color class="c-bolt-swatch__color {{ isLargeColor }}" style="background-color: {{ colorValue }};">
              <div class="c-bolt-swatch__text" style="color: {{ colorValue | rgb2hex | text_contrast }}">

                {% if tone == "initial" or tone == "default" or tone == "base" %}
                  <div class="c-bolt-swatch__meta">(Initial)</div>
                {% endif %}

                <span class="c-bolt-swatch__name">
                  {{ colorName | capitalize}}{% if tone != "initial" and tone != "default" and tone != "base" %}, {{ tone }}
                  {% endif %}
                </span>

                <span class="c-bolt-swatch__value">
                  {{ colorValue | rgb2hex }}
                </span>
              </div>

            </bolt-swatch-color>
          {% endfor %}
        <!-- </div> -->
      </bolt-swatch>
    </div>
  {% endfor %}
</div>
