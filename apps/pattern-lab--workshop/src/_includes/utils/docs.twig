<div class="bolt-docs">

  {% if schema %}
    <div class="bolt-docs__schema">
      {% include '@utils/schema-docs.twig' with schema only %}
    </div>
  {% endif %}

  {% if code %}
    <h4>How to use</h4>
    <pre><code>{{ code }}</code></pre>
  {% endif %}

  {% if readmeFile %}
    <h4>ReadMe</h4>
    {% include '@utils/md-embed.twig' with {
      file: readmeFile,
    } only %}
  {% endif %}

  {% if links %}
    <h4>Helpful Links</h4>
    {% for link in links %}
      <a href="{{ link.url }}" target="_blank">{{ link.text }}</a>
    {% endfor %}
  {% endif %}
</div>
