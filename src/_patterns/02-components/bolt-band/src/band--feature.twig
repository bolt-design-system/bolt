{% extends "@bolt/band.twig" %}
{% block band_content %}
  {% grid "o-bolt-grid--flex o-bolt-grid--large o-bolt-grid--matrix" %}

    {% cell "u-bolt-width-1/1 u-bolt-width-2/3@small" %}
      {% if primaryTeaser %}
        {% include "@bolt/teaser.twig" with primaryTeaser only %}
      {% endif %}
    {% endcell %}


    {% cell "u-bolt-width-1/1 u-bolt-width-1/3@small" %}
      {{ content }}
    {% endcell %}
  {% endgrid %}
{% endblock band_content %}