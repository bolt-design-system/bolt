{% set band_content %}
  {% include '@bolt-components-headline/headline.twig' with {
    text: 'Best of Pega, curated for you',
    size: 'xxlarge',
    align: 'center',
    tag: 'h2',
  } only %}
  <div class="o-bolt-grid o-bolt-grid--flex o-bolt-grid--matrix o-bolt-grid--large">
    <div class="o-bolt-grid__cell u-bolt-width-12/12 u-bolt-width-6/12@medium">
      {% include '@bolt-components-headline/subheadline.twig' with {
        text: 'Recommended for you',
        size: 'xlarge',
        tag: 'h3'
      } only %}
      <div class="u-bolt-margin-bottom-small">
        {# <img src="https://via.placeholder.com/1600x900?text=Placeholder+Video" alt=""> #}
        {% set video %}
          <video-js
            data-account='1900410236'
            data-player='4fVA8Ojzs'
            data-embed='default'
            data-video-id='3974147489001'
            data-media-title
            data-media-duration
            controls
            class='c-base-video'></video-js>
        {% endset %}
        {% include '@bolt-components-ratio/ratio.twig' with {
          children: video,
          ratio: '16/9'
        } only %}
      </div>
      <div class="u-bolt-margin-bottom-small">
        {% include '@bolt-components-headline/text.twig' with {
          text: '27 views',
          size: 'xsmall',
          icon: {
            name: 'eye',
            position: 'before',
          },
          attributes: {
            class: [
              'u-bolt-color-gray-dark',
              'u-bolt-margin-bottom-xsmall',
            ],
          },
        } only %}
        {% include '@bolt-components-headline/headline.twig' with {
          text: 'The future of work',
          size: 'xlarge',
          tag: 'h4',
        } only %}
        {% include '@bolt-components-headline/text.twig' with {
          text: 'Chicken bacon doner pancetta pork corned beef, swine jowl burgdoggen pastrami buffalo beef ribs shankle. Turducken pork porchetta shankle, salami short ribs corned beef. Short ribs turkey burgdoggen, fatback jerky chuck landjaeger corned beef pork t-bone jowl hamburger brisket strip steak. Tenderloin cow bacon cupim t-bone short ribs swine biltong beef ribs capicola sausage beef.',
        } only %}
      </div>
      {% include '@bolt-components-chip-list/chip-list.twig' with {
        items: [
          {
            text: 'Whitepaper',
            url: '#!'
          },
          {
            text: 'Research',
            url: '#!'
          },
        ],
        size: 'xsmall',
      } only %}
    </div>
    <div class="o-bolt-grid__cell u-bolt-width-12/12 u-bolt-width-6/12@medium">
      {% include '@bolt-components-headline/subheadline.twig' with {
        text: 'Trending now',
        size: 'xlarge',
        tag: 'h3',
      } only %}
      <div class="o-bolt-grid o-bolt-grid--flex o-bolt-grid--matrix">
        <div class="o-bolt-grid__cell u-bolt-width-3/12">
          {% set video %}
            <video-js
              data-account='1900410236'
              data-player='4fVA8Ojzs'
              data-embed='default'
              data-video-id='3974147489001'
              controls
              class='c-base-video'></video-js>
          {% endset %}
          {% include '@bolt-components-ratio/ratio.twig' with {
            children: video,
            ratio: '1/1'
          } only %}
        </div>
        <div class="o-bolt-grid__cell u-bolt-width-9/12">
          <div class="u-bolt-margin-bottom-xsmall">
            {% include '@bolt-components-headline/text.twig' with {
              text: '75 views',
              size: 'xsmall',
              icon: {
                name: 'eye',
                position: 'before',
              },
              attributes: {
                class: [
                  'u-bolt-color-gray-dark',
                  'u-bolt-margin-bottom-xsmall',
                ],
              },
            } only %}
            {% include '@bolt-components-headline/headline.twig' with {
              text: 'Rethink your business architecture with a center-out approach',
              size: 'large',
              tag: 'h4',
            } only %}
            {% include '@bolt-components-headline/text.twig' with {
              text: 'Short ribs turkey burgdoggen, fatback jerky chuck landjaeger corned beef pork t-bone jowl hamburger.',
            } only %}
          </div>
          {% include '@bolt-components-chip/chip.twig' with {
            text: 'Video',
            url: 'https://pega.com',
            size: 'xsmall',
          } only %}
        </div>
        <div class="o-bolt-grid__cell u-bolt-width-3/12">
          {% include '@bolt-components-image/image.twig' with {
            src: '/images/placeholders/thumb-square-abstract.jpg',
            alt: '',
          } only %}
        </div>
        <div class="o-bolt-grid__cell u-bolt-width-9/12">
          <div class="u-bolt-margin-bottom-xsmall">
            {% include '@bolt-components-headline/text.twig' with {
              text: '868 views',
              size: 'xsmall',
              icon: {
                name: 'eye',
                position: 'before',
              },
              attributes: {
                class: [
                  'u-bolt-color-gray-dark',
                  'u-bolt-margin-bottom-xsmall',
                ],
              },
            } only %}
            {% include '@bolt-components-headline/headline.twig' with {
              text: '10 golden rules for RPA success',
              size: 'large',
              tag: 'h4',
            } only %}
            {% include '@bolt-components-headline/text.twig' with {
              text: 'Short ribs turkey burgdoggen, fatback jerky chuck landjaeger corned beef pork t-bone jowl hamburger.',
            } only %}
          </div>
          {% include '@bolt-components-chip/chip.twig' with {
            text: 'Whitepaper',
            url: 'https://pega.com',
            size: 'xsmall',
          } only %}
        </div>
        <div class="o-bolt-grid__cell u-bolt-width-3/12">
          {% include '@bolt-components-image/image.twig' with {
            src: '/images/placeholders/thumb-square-ivy.jpg',
            alt: '',
          } only %}
        </div>
        <div class="o-bolt-grid__cell u-bolt-width-9/12">
          <div class="u-bolt-margin-bottom-xsmall">
            {% include '@bolt-components-headline/text.twig' with {
              text: '109 views',
              size: 'xsmall',
              icon: {
                name: 'eye',
                position: 'before',
              },
              attributes: {
                class: [
                  'u-bolt-color-gray-dark',
                  'u-bolt-margin-bottom-xsmall',
                ],
              },
            } only %}
            {% include '@bolt-components-headline/headline.twig' with {
              text: 'Be strong. Leaner. More agile.',
              size: 'large',
              tag: 'h4',
            } only %}
            {% include '@bolt-components-headline/text.twig' with {
              text: 'Short ribs turkey burgdoggen, fatback jerky chuck landjaeger corned beef pork t-bone jowl hamburger.',
            } only %}
          </div>
          {% include '@bolt-components-chip/chip.twig' with {
            text: 'E-Book',
            url: 'https://pega.com',
            size: 'xsmall',
          } only %}
        </div>
      </div>
    </div>
    <div class="o-bolt-grid__cell u-bolt-width-12/12 u-bolt-text-align-center">
      {% include '@bolt-elements-button/button.twig' with {
        content: 'See more recommendations',
        attributes: {
          href: 'https://pega.com'
        }
      } only %}
    </div>
  </div>
{% endset %}

{% include '@bolt-components-band/band.twig' with {
  content: band_content,
  theme: 'xlight',
  background: {
    overlay: 'disabled',
    contentItems: [
      {
        pattern: 'image',
        src: '/images/backgrounds/teal-stripes.png',
        lazyload: true,
      },
    ]
  },
} only %}
