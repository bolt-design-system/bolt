{% grid "o-bolt-grid--flex o-bolt-grid--matrix o-bolt-grid--center" %}
  {% cell "u-bolt-width-6/12 u-bolt-width-4/12@small" %}
    {% include "@bolt-components-card-replacement/card-replacement.twig" with {
      media: {
        image: {
          src: "/images/placeholders/landscape-16x9-mountains.jpg",
          alt: "Image alt.",
        },
      },
      body: {
        eyebrow: "This is an eyebrow",
        headline: "This card's `action` is an internal link",
        paragraph: "This is a paragraph.",
      },
      actions: [
        {
          text: "This is an internal button",
          url: "http://pega.com",
        },
      ],
    } only %}
  {% endcell %}

  {% cell "u-bolt-width-6/12 u-bolt-width-4/12@small" %}
    {% include "@bolt-components-card-replacement/card-replacement.twig" with {
      media: {
        image: {
          src: "/images/placeholders/landscape-16x9-mountains.jpg",
          alt: "Image alt.",
        },
      },
      body: {
        eyebrow: "This is an eyebrow",
        headline: "This card's `action` is an external link",
        paragraph: "This is a paragraph.",
      },
      actions: [
        {
          text: "This is an external button",
          url: "http://pega.com",
          external: true,
        },
      ],
    } only %}
  {% endcell %}
{% endgrid %}
